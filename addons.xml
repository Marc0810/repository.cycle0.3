<addons>
<addon id="skin.cycle" version="0.3" name="cycle" provider-name="Marc0810">
  <requires>
    <import addon="xbmc.gui" version="5.12.0"/>
  </requires>
  <extension point="xbmc.gui.skin" effectslowdown="0.75" debugging="false">
    <res width="1920" height="1080" aspect="16:9" default="true" folder="16x9" />
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">WIP Skin Cycle</summary>
	<description lang="en">WIP Skin Cycle</description>
    <summary lang="de">WIP Skin Cycle</summary>
	<description lang="en">Basierend auf dem WIP Skin Cycle mit freundlicher Genehmigung von Vanneska entstanden.</description>
    <platform>all</platform>
  </extension>
</addon>
