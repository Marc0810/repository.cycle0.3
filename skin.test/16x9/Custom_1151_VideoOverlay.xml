<?xml version="1.0" encoding="UTF-8"?>
<window type="dialog" id="1151"><!-- Cycle 0.4 -->
<zorder>135</zorder><!-- zorder hoeher fuer volumebar darueber -->
<onload>SetProperty(RefreshList3,1)</onload>
<visible>[Window.IsVisible(fullscreenvideo) | Window.IsVisible(Visualisation)] + [!Window.IsVisible(seekbar) + !Window.IsVisible(fullscreeninfo) + !Window.IsVisible(VideoOSD) + !Window.IsVisible(shutdownmenu)]</visible>
<controls>
<control type="group"><!-- aktuelle playliste Hidden -->
	<top>-200</top>
	<description>aktuelle playliste - container autoscroll bis match aktueller titel, offset 1 = neachstes</description>
	<visible>VideoPlayer.Content(episodes)</visible>
	<control type="label" id="111">
		<include>HiddenControl</include>
		<label>$INFO[VideoPlayer.Title]</label>
	</control>
	<control type="label" id="112">
		<include>HiddenControl</include>
		<label>$INFO[Container(222).ListItem.Title]</label>
	</control>
	<include>Animation-Opacity0</include>
	<control type="list" id="222">
		<width>1800</width>
		<height>270</height>
		<orientation>horizontal</orientation>
		<viewtype>list</viewtype>
		<autoscroll time="300" delay="100" repeat="5000">!String.IsEqual(Control.GetLabel(111),Control.GetLabel(112))</autoscroll>
		<pagecontrol></pagecontrol>
		<scrolltime>10</scrolltime>
		<itemlayout width="400" height="70">
			<control type="label">
				<width>400</width>
				<height>70</height>
				<font>BoldCDNormal</font>
				<wrapmultiline>false</wrapmultiline>
				<include>GlobalScroll</include>
				<textcolor>ACDIF_100</textcolor>
				<label>$INFO[ListItem.Title]</label>
			</control>
		</itemlayout>
		<focusedlayout width="400" height="70">
			<control type="label">
				<width>400</width>
				<height>70</height>
				<font>BoldCDNormal</font>
				<wrapmultiline>false</wrapmultiline>
				<include>GlobalScroll</include>
				<textcolor>ACDIF_100</textcolor>
				<label>$INFO[ListItem.Title]</label>
			</control>
		</focusedlayout>
		<content target="video">$VAR[Content-VideoPlaylist]</content>
	</control>
</control>
<control type="image"><!-- laeuft gerade 30 Sekunden am Anfang -->
	<width>1920</width>
	<height>206</height>
	<visible>[!Window.IsVisible(seekbar) + !Window.IsVisible(fullscreeninfo) + !Player.Muted + !Window.IsVisible(volumebar) + !Window.IsVisible(Custom_1197_ColorTimeRefresh.xml)]</visible>
	<visible>VideoPlayer.Content(episodes) + !Integer.IsGreater(VideoPlayer.Time,30)</visible>
	<texture border="1" colordiffuse="VideooverlayVignette">dialogs/nowplayingoverlay.png</texture>
	<include>Animation-OpenClose-Fade</include>
</control>
<control type="grouplist">
	<description>Laeuft gerade 30 Sekunden am Anfang</description>
	<left>165</left>
	<top>30</top>
	<width>1590</width>
	<height>100</height>
	<itemgap>10</itemgap>
	<orientation>horizontal</orientation>
	<visible>[!Window.IsVisible(seekbar) + !Window.IsVisible(fullscreeninfo) + !Window.IsVisible(Custom_1197_ColorTimeRefresh.xml)]</visible>
	<visible>VideoPlayer.Content(episodes) + !Integer.IsGreater(VideoPlayer.Time,30)</visible>
	<include>Animation-Popup-OSDDialog</include>
	<control type="label">
		<include>OSDInfoIconDimension</include>
		<label>à</label>
	</control>
	<control type="label">
		<description>Serie</description>
		<width>auto</width>
		<include>OSDLabelInfoDimension</include>
		<label>Läuft: $INFO[VideoPlayer.TVShowTitle]</label>
	</control>
	<control type="label">
		<description>Enum</description>
		<width>auto</width>
		<font>EnumBoldNormal</font><!-- include ueberschreibung -->
		<include>OSDLabelInfoDimension</include>
		<label>$VAR[CustomEnumeration]</label>
	</control>
	<control type="label">
		<description>details</description>
		<width>auto</width>
		<include>OSDLabelInfoDimension</include>
		<label>$VAR[VideoPlayerSeasonPrefix-long,, ]$VAR[VideoPlayerEpisodePrefix-long,, - ]$INFO[VideoPlayer.Title]</label>
	</control>
</control>
<control type="image"><!-- als naechstes 120 Sekunden am Ende -->
	<width>2220</width>
	<height>206</height>
	<visible>[!Window.IsVisible(seekbar) + !Window.IsVisible(fullscreeninfo) + !Window.IsVisible(Custom_1197_ColorTimeRefresh.xml)]</visible>
	<visible>VideoPlayer.Content(episodes) + !Integer.IsGreater(Player.TimeRemaining,120)</visible>
	<visible>String.IsEqual(Control.GetLabel(111),Control.GetLabel(112)) + Integer.IsGreater(Playlist.Length,1)</visible>
	<texture border="1" colordiffuse="VideooverlayVignette">dialogs/nowplayingoverlay.png</texture>
	<include>Animation-OpenClose-Fade</include>
</control>
<control type="grouplist">
	<description>Als naechstes 120 Sekunden am Ende</description>
	<left>165</left>
	<top>30</top>
	<width>1590</width>
	<height>100</height>
	<itemgap>10</itemgap>
	<orientation>horizontal</orientation>
	<visible>[!Window.IsVisible(seekbar) + !Window.IsVisible(fullscreeninfo) + !Window.IsVisible(Custom_1197_ColorTimeRefresh.xml)]</visible>
	<visible>VideoPlayer.Content(episodes) + !Integer.IsGreater(Player.TimeRemaining,120)</visible>
	<visible>String.IsEqual(Control.GetLabel(111),Control.GetLabel(112)) + Integer.IsGreater(Playlist.Length,1)</visible>
	<include>Animation-Popup-OSDDialog</include>
	<control type="label">
		<description>Laeuft icon</description>
		<include>OSDInfoIconDimension</include>
		<label>à</label>
	</control>
	<control type="label">
		<description>Serie</description>
		<width>auto</width>
		<include>OSDLabelInfoDimension</include>
		<label>Es Folgt: $INFO[Container(222).ListItem(1).TVShowTitle]</label>
	</control>
	<control type="label">
		<description>Enum</description>
		<width>auto</width>
		<font>EnumBoldNormal</font><!-- include ueberschreibung -->
		<include>OSDLabelInfoDimension</include>
		<label>$VAR[CustomEnumeration]</label>
	</control>
	<control type="label">
		<description>details</description>
		<width>auto</width>
		<include>OSDLabelInfoDimension</include>
		<label>$INFO[Container(222).ListItem(1).Season,Staffel , ]$INFO[Container(222).ListItem(1).Episode,Episode , -  ]$INFO[Container(222).ListItem(1).Title]</label>
	</control>
</control>
<control type="group"><!-- Mute -->
	<left>1680</left>
	<top>-120</top>
	<description>Default layout</description>
	<include>Animation-Topdown-Dialog</include>
	<visible>Player.Muted</visible>
	<animation type="Conditional" condition="[Window.IsVisible(Notification) | Window.IsActive(busydialog) | Window.IsVisible(Custom_1106_Histroyloader.xml)]" reversible="true">
		<effect type="fade" start="100" end="0" time="120" tween="cubic" easing="out" />
	</animation>
	<control type="image">
		<description>Hintergrund oben diffuse</description>
		<left>-20</left>
		<top>-15</top>
		<width>110</width>
		<height>97</height>
		<texture colordiffuse="VideooverlayVignette">dialogs/nowplayingroundoverlay.png</texture>
		<visible>![Window.IsVisible(fullscreeninfo) | Window.IsVisible(musicosd) | Window.IsVisible(videoosd) | Window.IsVisible(seekbar)]</visible>
		<include>Animation-Opacity30</include>
	</control>
	<control type="label">
		<width>80</width>
		<height>70</height>
		<font>IconVolume</font>
		<textcolor>$VAR[OSDDialogCol]</textcolor>
		<label>Ÿ</label>
	</control>
</control>
</controls>
</window>
