<?xml version="1.0" encoding="UTF-8"?>
<window><!-- Cycle 0.4 -->
<defaultcontrol>655</defaultcontrol>
<visible>!System.ScreenSaverActive</visible>
<controls>
<include condition="Skin.HasSetting(EnableVintageOverlay)">Vintagebackground</include>
<include condition="!Skin.HasSetting(EnableVintageOverlay)">Cyclebackground</include>
<include condition="!Skin.HasSetting(EnableVintageOverlay)">CyclebackgroundFanart</include>
<include>Topbar</include>
<control type="group">
	<include>Animation-OpenCloseVisibleHidden-Zoom</include>
	<control type="group"><!-- info -->
		<left>90</left>
		<top>150</top>
		<description>Info</description>
		<control type="label">
			<width>700</width>
			<height>60</height>
			<include>GlobalScroll</include>
			<font>TitleCapsBig</font>
			<label>$INFO[Container(655).ListItem.Label]</label>
		</control>
		<control type="label">
			<top>86</top>
			<width>700</width>
			<wrapmultiline>false</wrapmultiline>
			<include>InfoDetails-Label</include>
			<label>$INFO[Container(655).ListItem.Season,Staffel , ]$INFO[Container(655).ListItem.Episode,Episode ,]</label>
			<visible>!String.IsEmpty(Container(655).ListItem.Episode)</visible>
		</control>
		<control type="label">
			<top>130</top>
			<width>700</width>
			<wrapmultiline>false</wrapmultiline>
			<include>InfoDetails-Label</include>
			<label>$INFO[Container(655).ListItem.Label2]</label>
		</control>
		<control type="image">
			<top>200</top>
			<width>700</width>
			<height>112</height>
			<texture colordiffuse="ShadowColor">special://skin/backgrounds/vintage_floral.png</texture>
			<visible>Skin.HasSetting(EnableVintageOverlay)</visible>
			<include>Animation-Opacity30</include>
		</control>
		<control type="group"><!-- subinfo -->
			<animation type="Conditional" condition="!Skin.HasSetting(EnableVintageOverlay)">
				<effect type="slide" start="0,-112" end="0,-112" time="0"/>
			</animation>
			<control type="label">
				<top>320</top>
				<width>700</width>
				<include>InfoDetails-Label</include>
				<label>[COLOR=$VAR[PrimaryCol]]In dieser Episode[/COLOR]</label>
				<visible>Skin.HasSetting(EnableVintageOverlay) + !String.IsEmpty(Container(655).ListItem.Episode)</visible>
			</control>
			<control type="textbox">
				<top>380</top>
				<width>700</width>
				<height max="222">auto</height>
				<font>Plot</font>
				<autoscroll time="5000" delay="8000" repeat="5000">true</autoscroll>
				<label fallback="Kein Überblick gefunden">$INFO[Container(655).ListItem.Plot]</label>
			</control>
			<control type="label">
				<top>652</top>
				<width>280</width><!-- include ueberschreibung -->
				<wrapmultiline>false</wrapmultiline>
				<textcolor>TextColorMedium</textcolor>
				<include>InfoDetails-Label</include>
				<label>Verfügbar</label>
			</control>
			<control type="label">
				<top>702</top>
				<width>280</width><!-- include ueberschreibung -->
				<wrapmultiline>false</wrapmultiline>
				<textcolor>TextColorMedium</textcolor>
				<include>InfoDetails-Label</include>
				<label>Gesehen</label>
			</control>
			<control type="label">
				<top>752</top>
				<width>280</width><!-- include ueberschreibung -->
				<wrapmultiline>false</wrapmultiline>
				<textcolor>TextColorMedium</textcolor>
				<include>InfoDetails-Label</include>
				<label>Übergangen</label>
			</control>
			<control type="label">
				<left>280</left>
				<top>652</top>
				<wrapmultiline>false</wrapmultiline>
				<textcolor>$VAR[PrimaryCol]</textcolor>
				<include>InfoDetails-Label</include>
				<label fallback="nicht verfügbar">$INFO[Container(655).ListItem.Property(numondeck)]</label>
			</control>
			<control type="label">
				<left>280</left>
				<top>702</top>
				<wrapmultiline>false</wrapmultiline>
				<textcolor>$VAR[PrimaryCol]</textcolor>
				<include>InfoDetails-Label</include>
				<label fallback="nicht verfügbar">$INFO[Container(655).ListItem.Property(numwatched)]</label>
			</control>
			<control type="label">
				<left>280</left>
				<top>752</top>
				<wrapmultiline>false</wrapmultiline>
				<textcolor>$VAR[PrimaryCol]</textcolor>
				<include>InfoDetails-Label</include>
				<label fallback="nicht verfügbar">$INFO[Container(655).ListItem.Property(numskipped)]</label>
			</control>
		</control>
	</control>
	<control type="panel" id="655"><!-- content -->
		<description>Content</description>
		<viewtype label="Big Panel">Big Panel</viewtype>
		<left>860</left>
		<top>150</top>
		<width>910</width>
		<height>840</height>
		<onleft>close</onleft>
		<onright condition="Integer.IsGreater(Container(655).NumPages,1)">60</onright>
		<onright condition="!Integer.IsGreater(Container(655).NumPages,1)">close</onright>
		<onup>655</onup>
		<ondown>655</ondown>
		<pagecontrol>60</pagecontrol>
		<scrolltime tween="cubic" easing="inout">450</scrolltime>
		<itemlayout width="180" height="280">
			<control type="group">
				<left>33</left>
				<top>11</top>
				<control type="image">
					<description>Schatten</description>
					<left>-10</left>
					<top>-10</top>
					<width>172</width>
					<height>240</height>
					<texture border="8" colordiffuse="ShadowColor">views/shadow8.png</texture>
				</control>
				<control type="image">
					<description>Border</description>
					<left>-4</left>
					<top>-4</top>
					<width>158</width>
					<height>228</height>
					<texture border="8" colordiffuse="$VAR[CirclesCol]">views/white8.png</texture>
				</control>
				<control type="image"><!-- Fallback -->
					<description>Hintergrundfarbe</description>
					<width>150</width>
					<height>220</height>
					<texture colordiffuse="$VAR[PrimaryCol]">white.png</texture>
				</control>
				<control type="label">
					<description>Fallback icon</description>
					<width>150</width>
					<height>220</height>
					<align>center</align>
					<textcolor>$VAR[CirclesCol]</textcolor>
					<font>IconEpisodedefault</font>
					<label>D</label>
				</control>
				<control type="image"><!-- Art -->
					<width>150</width>
					<height>220</height>
					<texture background="true">$INFO[ListItem.Art(thumb)]</texture>
					<aspectratio align="center" aligny="center">scale</aspectratio>
				</control>
				<control type="image"><!-- Inaktiv overlay -->
					<width>150</width>
					<height>220</height>
					<texture colordiffuse="$VAR[InaktivImageCol]">white.png</texture>
				</control>
			</control>
		</itemlayout>
		<focusedlayout width="180" height="280">
			<control type="group">
				<left>33</left>
				<top>11</top>
				<animation effect="zoom" start="100" end="120" center="118,140" time="250">Focus</animation>
				<animation effect="zoom" start="120" end="100" center="118,140" time="100">UnFocus</animation>
				<control type="image">
					<description>Schatten</description>
					<left>-10</left>
					<top>-10</top>
					<width>172</width>
					<height>240</height>
					<texture border="8" colordiffuse="ShadowColor">views/shadow8.png</texture>
				</control>
				<control type="image">
					<description>Border</description>
					<left>-4</left>
					<top>-4</top>
					<width>158</width>
					<height>228</height>
					<texture border="8" colordiffuse="$VAR[CirclesCol]">views/white8.png</texture>
				</control>
				<control type="image"><!-- Fallback -->
					<description>Hintergrundfarbe</description>
					<width>150</width>
					<height>220</height>
					<texture colordiffuse="$VAR[PrimaryCol]">white.png</texture>
				</control>
				<control type="label">
					<description>Fallback icon</description>
					<width>150</width>
					<height>220</height>
					<align>center</align>
					<font>IconEpisodedefault</font>
					<textcolor>$VAR[CirclesCol]</textcolor>
					<label>D</label>
				</control>
				<control type="image"><!-- Art -->
					<width>150</width>
					<height>220</height>
					<texture background="true">$INFO[ListItem.Art(thumb)]</texture>
					<aspectratio align="center" aligny="center">scale</aspectratio>
				</control>
				<control type="image"><!-- Inaktiv overlay -->
					<width>150</width>
					<height>220</height>
					<texture colordiffuse="$VAR[InaktivImageCol]">white.png</texture>
					<include>Animation-Dim</include>
				</control>
			</control>
		</focusedlayout>
	</control>
	<control type="scrollbar" id="60"><!-- Scroller -->
		<left>1790</left>
		<top>160</top>
		<width>6</width>
		<height>840</height>
		<onleft>655</onleft>
		<onright>655</onright>
	</control>
</control>
</controls>
</window>