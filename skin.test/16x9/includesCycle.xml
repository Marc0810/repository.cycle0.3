<?xml version="1.0" encoding="UTF-8"?>
<includes><!-- Cycle 0.4 -->
<include name="Cyclebackground">
	<control type="image">
		<description>Hintergrund</description>
		<width>screen.width</width>
		<height>screen.height</height>
		<texture>special://skin/backgrounds/background.jpg</texture>
	</control>
</include>

<variable name="CyclebackgroundFanart-Value">
	<value condition="!String.IsEmpty(ListItem.Art(fanart))">$INFO[ListItem.Art(fanart)]</value>
	<value condition="System.HasAddon(resource.images.moviegenrefanart.cycle) + Container.Content(genres) + !String.StartsWith(Container.FolderPath,videodb://tvshows/)">$INFO[ListItem.Label,resource://resource.images.moviegenrefanart.cycle/moviegenres_fanart/,.jpg]</value>
	<value condition="System.HasAddon(resource.images.moviegenrefanart.cycle) + Container.Content(genres)">$INFO[ListItem.Label,resource://resource.images.moviegenrefanart.cycle/tvgenres_fanart/,.jpg]</value>
	<value condition="!String.IsEmpty(Container.Art(artist.fanart))">$INFO[Container.Art(artist.fanart)]</value>
	<!--<value condition="!String.IsEmpty(ListItem.Property(Fanart_Image))">$INFO[ListItem.Property(Fanart_Image)]</value>-->
	<value condition="!String.IsEmpty(Container.Art(tvshow.fanart))">$INFO[Container.Art(tvshow.fanart)]</value>
	<value condition="!String.IsEmpty(Container.Art(fanart))">$INFO[Container.Art(fanart)]</value>
	<value condition="Window.IsVisible(script-lazytv-main.xml)">$INFO[Container(655).ListItem.Property(Fanart_Image)]</value>
	<value condition="Window.IsVisible(videos) + Window.IsActive(Custom_1101_Widgets.xml)">$INFO[Container(400).ListItem.Art(fanart)]</value>
	<value condition="Window.IsActive(Custom_1103_Categoryinfo.xml)">$INFO[Container(400).ListItem.Art(fanart)]</value>
	<value condition="Window.IsActive(Custom_1104_Categoryinfolist.xml)">$INFO[Container(400).ListItem.Art(fanart)]</value>
	<value condition="Window.IsActive(Custom_1149_DialogLastWatched.xml)">$INFO[Container(400).ListItem.Art(fanart)]</value>
	<value condition="Window.IsActive(visualisation)">$INFO[Player.Art(fanart)]</value>
</variable>

<include name="CyclebackgroundFanart">
	<control type="image" id="2345">
		<description>Hiddencontrol fanart leer</description>
		<texture fallback="leer">$VAR[CyclebackgroundFanart-Value]</texture>
		<include>HiddenControl</include>
		<visible>!Skin.HasSetting(HideBackGroundFanart)</visible>
	</control>
	<control type="image">
		<description>Hintergrund fanart</description>
		<width>screen.width</width>
		<height>screen.height</height>
		<fadetime>300</fadetime>
		<texture background="true" colordiffuse="$VAR[FanartDiffuseCol]">$VAR[CyclebackgroundFanart-Value]</texture>
		<include>Animation-VisibleHidden-BackgroundFade</include>
		<visible>!Skin.HasSetting(HideBackGroundFanart)</visible>
	</control>
</include>

</includes>