		<height>200</height>
		<align>center</align>
		<font>Iconkaitoast</font>
		<textcolor>$VAR[PrimaryCol]</textcolor>
		<label>ȭ</label>
		<include>Animation-Busyloader</include>
		<visible>Control.HasFocus(3112)</visible>
	</control>
	<control type="label">
		<width>200</width>
