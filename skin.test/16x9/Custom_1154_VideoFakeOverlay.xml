<?xml version="1.0" encoding="UTF-8"?>
<window id="1154"><!-- Cycle 0.4 -->
<defaultcontrol always="true">3112</defaultcontrol>
<onunload>ClearProperty(Videoratinginfo,home)</onunload>
<controls>
<control type="group"><!-- aktuelle playliste Hidden Control -->
	<top>-200</top>
	<description>aktuelle playliste - container autoscroll bis match aktueller titel, offset 1 = neachstes</description>
	<include>Animation-Opacity0</include>
	<control type="button" id="3112">
		<include>HiddenControl</include>
		<onfocus condition="!Container(222).Scrolling">AlarmClock(Beginnloading,SetFocus(222),0:01,true)</onfocus>
		<onfocus condition="Container(222).Scrolling">AlarmClock(Beginnloading,SetFocus(3113),0:01,true)</onfocus>
	</control>
	<control type="button" id="3113">
		<include>HiddenControl</include>
		<onfocus condition="!Container(222).Scrolling">AlarmClock(Beginnloading,SetFocus(222),0:01,true)</onfocus>
		<onfocus condition="Container(222).Scrolling">AlarmClock(Beginnloading,SetFocus(3112),0:01,true)</onfocus>
	</control>
	<control type="list" id="222">
		<width>1800</width>
		<height>270</height>
		<orientation>horizontal</orientation>
		<viewtype>list</viewtype>
		<onfocus>Action(info)</onfocus>
		<autoscroll time="10" delay="50" repeat="50">!String.IsEqual(Container(222).ListItem.FilenameAndPath,Player.FilenameAndPath)</autoscroll>
		<pagecontrol></pagecontrol>
		<scrolltime>10</scrolltime>
		<itemlayout width="400" height="70">
			<control type="label">
				<width>400</width>
				<height>70</height>
				<font>BoldCDNormal</font>
				<wrapmultiline>false</wrapmultiline>
				<include>GlobalScroll</include>
				<textcolor>ACDIF_100</textcolor>
				<label>$INFO[ListItem.Title]</label>
			</control>
		</itemlayout>
		<focusedlayout width="400" height="70">
			<control type="label">
				<width>400</width>
				<height>70</height>
				<font>BoldCDNormal</font>
				<wrapmultiline>false</wrapmultiline>
				<include>GlobalScroll</include>
				<textcolor>ACDIF_100</textcolor>
				<label>$INFO[ListItem.Title]</label>
			</control>
		</focusedlayout>
		<content target="video">$VAR[Content-VideoPlaylist]</content>
	</control>
</control>
<include condition="Skin.HasSetting(EnableVintageOverlay)">Vintagebackground</include>
<include condition="!Skin.HasSetting(EnableVintageOverlay)">Cyclebackground</include>
<control type="image">
	<description>Diffuse Background Image</description>
	<width>screen.width</width>
	<height>screen.height</height>
	<texture colordiffuse="InversColor">white.png</texture>
</control>
<control type="videowindow">
	<width>screen.width</width>
	<height>screen.height</height>
</control>
<control type="group"><!-- progress kreis -->
	<left>860</left>
	<top>440</top>
	<width>200</width>
	<height>200</height>
	<animation effect="fade" delay="300" time="200">Visible</animation>
	<animation effect="fade" delay="200" time="150">Hidden</animation>
	<control type="label">
		<width>200</width>
		<height>200</height>
		<align>center</align>
		<font>Iconkaitoast</font>
		<textcolor>$VAR[OSDDialogCol]</textcolor>
