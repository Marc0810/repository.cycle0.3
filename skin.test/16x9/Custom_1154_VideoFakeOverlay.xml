		<align>center</align>
		<font>Iconkaitoast</font>
		<textcolor>$VAR[PrimaryCol]</textcolor>
		<label>Ȫ</label>
		<include>Animation-Busyloader</include>
		<visible>Control.HasFocus(3113)</visible>
	</control>
	<control type="label">
		<width>200</width>
		<height>200</height>
		<align>center</align>
		<font>Iconkaitoast</font>
		<textcolor>$VAR[PrimaryCol]</textcolor>
		<label>ȧ</label>
		<include>Animation-Busyloader</include>
		<visible>Control.HasFocus(222)</visible>
	</control>
