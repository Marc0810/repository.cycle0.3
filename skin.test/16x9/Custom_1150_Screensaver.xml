<?xml version="1.0" encoding="UTF-8"?>
<window type="dialog" id="1150"><!-- Cycle 0.4 -->
<visible>System.ScreenSaverActive</visible>
<controls>
<control type="group">
	<description>Screensaver overlay</description>
	<visible>!Window.IsActive(fullscreenvideo)</visible>
	<include condition="Skin.HasSetting(EnableVintageOverlay)">Vintagebackground</include>
	<include condition="!Skin.HasSetting(EnableVintageOverlay)">Cyclebackground</include>
	<animation type="WindowOpen" reversible="false">
		<effect type="fade" start="0" end="100" delay="100" time="1250" tween="cubic" easing="inout" />
	</animation>
	<animation type="WindowClose" reversible="false">
		<effect type="fade" start="100" end="0" time="250" tween="cubic" easing="inout" />
	</animation>
	<animation type="Visible" reversible="false">
		<effect type="fade" start="0" end="100" delay="100" time="1250" tween="cubic" easing="inout" />
	</animation>
	<animation type="Hidden" reversible="false">
		<effect type="fade" start="100" end="0" time="250" tween="cubic" easing="inout" />
	</animation>
	<control type="group"><!-- Uhr -->
		<description>Uhr</description>
		<left>603</left>
		<top>183</top>
		<include>Animation-OpenCloseVisibleHidden-Fade</include>
		<include>CycleClock</include>
	</control>
	<control type="group"><!-- Texte -->
		<animation type="WindowOpen" reversible="false">
			<effect type="fade" start="0" end="100" delay="1000" time="600" tween="cubic" easing="out" />
		</animation>
		<animation type="WindowClose" reversible="false">
			<effect type="fade" start="100" end="0" time="100" tween="cubic" easing="out" />
		</animation>
		<control type="label">
			<description>Titel</description>
			<left>460</left>
			<top>900</top>
			<width>1000</width>
			<height>60</height>
			<align>center</align>
			<font>CycleLogoBranding</font>
			<textcolor>TextColorMedium</textcolor>
			<label>$VAR[GlobalSkinversion]</label>
			<visible>!Player.HasMedia</visible>
		</control>
		<control type="label">
			<description>Subtitel</description>
			<left>460</left>
			<top>970</top>
			<width>1000</width>
			<height>60</height>
			<align>center</align>
			<textcolor>TextColorMedium</textcolor>
			<label>...</label>
			<visible>!Window.IsVisible(progressdialog) + !Player.HasMedia</visible>
		</control>
	</control>
	<control type="group"><!-- Info links/rechts Date/Wetter -->
		<description>Info links/rechts</description>
		<animation type="WindowOpen" reversible="false">
			<effect type="fade" start="0" end="100" time="700" tween="cubic" easing="out" />
		</animation>
		<animation type="WindowClose" reversible="false">
			<effect type="fade" start="100" end="0" time="100" tween="cubic" easing="out" />
		</animation>
		<control type="grouplist">
			<description>links</description>
			<left>100</left>
			<top>450</top>
			<width>500</width>
			<control type="label">
				<description>links Datum</description>
				<width>500</width>
				<height min="50" max="100">auto</height>
				<wrapmultiline>true</wrapmultiline>
				<font>BreadcumbNormal</font>
				<label>$INFO[System.Date(DDD)],[CR]$INFO[System.Date(mm),,.]$INFO[System.Date(MMM), , ]$INFO[System.Date(yyyy)]</label>
			</control>
			<control type="label">
				<description>links Wetter Standort</description>
				<width>400</width>
				<height>60</height>
				<font>BreadcumbSmall</font>
				<label>$INFO[Window(Weather).Property(Current.Location)]</label>
				<visible>!String.IsEmpty(Weather.Plugin) + Weather.IsFetched</visible>
			</control>
		</control>
		<control type="grouplist">
			<description>rechts</description>
			<left>1320</left>
			<top>450</top>
			<width>500</width>
			<control type="label">
				<description>rechts Temperatur</description>
				<left>1320</left>
				<top>450</top>
				<align>right</align>
				<width>500</width>
				<height min="50" max="100">auto</height>
				<wrapmultiline>true</wrapmultiline>
				<font>BreadcumbNormal</font>
				<label>$INFO[Window(Weather).Property(Current.Temperature)]$INFO[System.TemperatureUnits],</label>
				<visible>!String.IsEmpty(Weather.Plugin) + Weather.IsFetched</visible>
			</control>
			<control type="label">
				<description>rechts ProfileName wenn kein wetter</description>
				<left>1320</left>
				<top>450</top>
				<align>right</align>
				<width>500</width>
				<height min="50" max="100">auto</height>
				<wrapmultiline>true</wrapmultiline>
				<font>BreadcumbNormal</font>
				<label>$INFO[System.ProfileName]</label>
				<visible>![String.IsEmpty(Weather.Plugin) | Weather.IsFetched]</visible>
			</control>
			<control type="label">
				<description>rechts Ausblick</description>
				<left>1320</left>
				<top>490</top>
				<width>500</width>
				<height>60</height>
				<align>right</align>
				<font>BreadcumbSmall</font>
				<label>$INFO[Window(Weather).Property(Current.Condition)]</label>
				<visible>!String.IsEmpty(Weather.Plugin) + Weather.IsFetched</visible>
			</control>

		</control>
	</control>
	<include>Cycle-HomeMenue-Nowplaying</include>
</control>
</controls>
</window>

