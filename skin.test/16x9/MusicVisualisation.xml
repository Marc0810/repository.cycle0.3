<?xml version="1.0" encoding="UTF-8"?>
<window><!-- Cycle 0.4 -->
<backgroundcolor>BackgroundColor</backgroundcolor>
<defaultcontrol></defaultcontrol>
<onload>skin.Reset(SelectDialog)</onload>
<onunload>skin.Reset(SelectDialog)</onunload>
<controls>
	<include condition="Skin.HasSetting(EnableVintageOverlay)">Vintagebackground</include>
	<include condition="!Skin.HasSetting(EnableVintageOverlay)">Cyclebackground</include>
	<include condition="!Skin.HasSetting(EnableVintageOverlay)">CyclebackgroundFanart</include>
	<include>MusicVizbackground</include><!-- Hintergrund -->
	<control type="group"><!-- infos MCE -->
		<visible>!Window.IsVisible(SelectDialog) + !Visualisation.Enabled + [Player.ShowInfo | !Skin.HasSetting(DisableShowMusicInfo)]</visible>
		<animation type="Conditional" condition="Window.IsVisible(MusicOSD)">
			<effect type="slide" start="0,0" end="0,-80" time="180" />
		</animation>
		<animation type="WindowOpen" reversible="false">
			<effect type="fade" start="0" end="100" delay="2000" time="950" tween="quadratic" easing="out" />
		</animation>
		<animation type="WindowClose" reversible="false">
			<effect type="fade" start="100" end="0" time="250" tween="cubic" easing="inout" />
		</animation>
		<animation type="Visible" reversible="false">
			<effect type="fade" start="0" end="100" time="650" tween="cubic" easing="inout" />
		</animation>
		<animation type="Hidden" reversible="false">
			<effect type="fade" start="100" end="0" time="250" tween="cubic" easing="inout" />
		</animation>
		<control type="image">
			<description>Vignette zum Abdunkeln der Ecken Invers</description>
			<left>675</left>
			<top>150</top>
			<width>1245</width>
			<height>825</height>
			<texture colordiffuse="CC000000">musicviz/vizmatte.png</texture>
		</control>
		<control type="group"><!-- art -->
			<left>510</left>
			<top>310</top>
			<control type="image">
				<description>Schatten</description>
				<left>-8</left>
				<top>-8</top>
				<width>436</width>
				<height>436</height>
				<texture border="8" colordiffuse="ShadowColor">views/shadow8.png</texture>
			</control>
			<control type="image">
				<description>Border</description>
				<left>-4</left>
				<top>-4</top>
				<width>428</width>
				<height>428</height>
				<texture border="8" colordiffuse="$VAR[CirclesCol]">views/white8.png</texture>
			</control>
			<control type="image"><!-- Fallback -->
				<description>Hintergrundfarbe</description>
				<width>420</width>
				<height>420</height>
				<texture colordiffuse="$VAR[PrimaryCol]">white.png</texture>
			</control>
			<control type="label">
				<description>Fallback icon</description>
				<width>420</width>
				<height>420</height>
				<align>center</align>
				<textcolor>$VAR[CirclesCol]</textcolor>
				<font>IconInfoThumbdefault</font>
				<label>$VAR[Art-Fallback]</label>
			</control>
			<control type="image">
				<description>Art</description>
				<width>420</width>
				<height>420</height>
				<aspectratio>scale</aspectratio>
				<texture>$INFO[Player.Art(thumb)]</texture>
				<visible>!String.IsEmpty(Player.Art(thumb))</visible>
			</control>
			<control type="group"><!-- Rating -->
				<description>Rating Overlay - Rating und Userrating</description>
				<left>136</left>
				<top>394</top>
				<include>StarRating-bg</include>
				<control type="label"><!-- -19 -->
					<label>$VAR[Player-StarRatingback]</label>
					<include>StarRating-Layoutback</include>
				</control>
				<control type="label">
					<label>$VAR[Player-StarRating]</label>
					<include>StarRating-Layoutfront</include>
				</control>
			</control>
		</control>
		<control type="grouplist"><!-- infos -->
			<left>980</left>
			<top>305</top>
			<width>900</width>
			<height>400</height>
			<animation effect="fade" time="200">VisibleChange</animation>
			<control type="label">
				<description>Titel</description>
				<width>900</width>
				<height>40</height>
				<font>RegularSmall</font>
				<textcolor>FF9A9999</textcolor>
				<label>Läuft</label>
			</control>
			<control type="label">
				<description>Song Titel</description>
				<width>900</width>
				<height>50</height>
				<font>MusicvizTitle</font>
				<textcolor>FFE5E5E5</textcolor>
				<label>$INFO[MusicPlayer.Title]</label>
			</control>
			<control type="label">
				<description>Interpret</description>
				<width>900</width>
				<height>70</height>
				<font>MusicvizTitleSubTitle</font>
				<textcolor>FFBCBBBB</textcolor>
				<label>$INFO[MusicPlayer.Artist]</label>
				<visible>!String.IsEmpty(MusicPlayer.Artist)</visible>
			</control>
			<control type="label">
				<description>Album</description>
				<width>900</width>
				<height>50</height>
				<textcolor>FFBCBBBB</textcolor>
				<label>$INFO[MusicPlayer.Album]</label>
				<visible>!String.IsEmpty(MusicPlayer.Album)</visible>
			</control>
			<control type="label">
				<description>Aktuelle Zeit</description>
				<height>50</height>
				<textcolor>FFE5E5E5</textcolor>
				<label>$INFO[MusicPlayer.Time]</label>
			</control>
			<control type="label">
				<description>Dauer</description>
				<height>50</height>
				<textcolor>FFBCBBBB</textcolor>
				<label>Titelspielzeit $INFO[Player.Duration]</label>
			</control>
			<control type="label">
				<description>Naechster titel</description>
				<height>90</height>
				<include>GlobalScroll</include>
				<font>RegularSmall</font>
				<textcolor>FFBCBBBB</textcolor>
				<wrapmultiline>true</wrapmultiline>
				<label>Als nächstes:[CR]$INFO[MusicPlayer.offset(1).Artist,, - ]$INFO[MusicPlayer.offset(1).Title]</label>
				<animation effect="fade" time="200">VisibleChange</animation>
				<visible>MusicPlayer.HasNext + !String.IsEmpty(MusicPlayer.offset(1).Title)</visible>
			</control>
		</control>
	</control>
	<control type="group"><!-- infos Viz -->
		<animation type="WindowOpen" reversible="false">
			<effect type="fade" start="0" end="100" delay="2000" time="950" tween="quadratic" easing="out" />
		</animation>
		<animation type="WindowClose" reversible="false">
			<effect type="fade" start="100" end="0" time="250" tween="cubic" easing="inout" />
		</animation>
		<animation type="Visible" reversible="false">
			<effect type="fade" start="0" end="100" time="650" tween="cubic" easing="inout" />
		</animation>
		<animation type="Hidden" reversible="false">
			<effect type="fade" start="100" end="0" time="250" tween="cubic" easing="inout" />
		</animation>
		<animation type="Conditional" condition="Window.IsVisible(MusicOSD) | Window.IsVisible(seekbar)">
			<effect type="slide" start="0,0" end="0,-160" time="180" />
		</animation>
		<visible>!Window.IsVisible(SelectDialog) + Visualisation.Enabled + [Player.ShowInfo | !Skin.HasSetting(DisableShowMusicInfo)]</visible>
		<control type="group"><!-- art -->
			<left>-30</left>
			<top>550</top>
			<control type="image">
				<description>Infohintergrund Vignette</description>
				<left>-50</left>
				<top>110</top>
				<width>2000</width>
				<height>320</height>
				<texture colordiffuse="$VAR[DialogCol]">white.png</texture>
				<include>Animation-Opacity90</include>
			</control>
			<control type="image">
				<description>Discart</description>
				<left>300</left>
				<top>116</top>
				<width>340</width>
				<height>340</height>
				<texture fallback="views/cdartdefault.png">$INFO[Player.FolderPath]cdart.png</texture>
				<aspectratio align="right" aligny="center">keep</aspectratio>
				<animation effect="rotate" start="360" end="0" delay="2000" center="470,286" time="35000" loop="true" condition="Player.Playing | Player.Forwarding2x | Player.Forwarding4x | Player.Forwarding8x | Player.Forwarding16x | Player.Forwarding32x">Conditional</animation>
			</control>
			<control type="image">
				<description>Schatten</description>
				<left>87</left>
				<top>87</top>
				<width>398</width>
				<height>398</height>
				<texture border="8" colordiffuse="ShadowColor">views/shadow8.png</texture>
			</control>
			<control type="image">
				<description>Border</description>
				<left>95</left>
				<top>95</top>
				<width>382</width>
				<height>382</height>
				<texture border="8" colordiffuse="$VAR[CirclesCol]">views/white8.png</texture>
			</control>
			<control type="image"><!-- Fallback -->
				<description>Hintergrundfarbe</description>
				<left>100</left>
				<top>100</top>
				<width>372</width>
				<height>372</height>
				<texture colordiffuse="$VAR[PrimaryCol]">white.png</texture>
			</control>
			<control type="label">
				<description>Fallback icon</description>
				<left>100</left>
				<top>100</top>
				<width>372</width>
				<height>372</height>
				<align>center</align>
				<textcolor>$VAR[CirclesCol]</textcolor>
				<font>IconInfoThumbdefault</font>
				<label>$VAR[Art-Fallback]</label>
			</control>
			<control type="image">
				<description>Art</description>
				<left>100</left>
				<top>100</top>
				<width>372</width>
				<height>372</height>
				<aspectratio>scale</aspectratio>
				<texture background="true">$INFO[Player.Art(thumb)]</texture>
				<visible>!String.IsEmpty(Player.Art(thumb))</visible>
			</control>
			<control type="group"><!-- Rating -->
				<description>Rating Overlay - Rating und Userrating</description>
				<left>222</left>
				<top>448</top>
				<visible>!Player.IsInternetStream</visible>
				<include>StarRating-bg</include>
				<control type="label"><!-- -19 -->
					<label>$VAR[Player-StarRatingback]</label>
					<include>StarRating-Layoutback</include>
				</control>
				<control type="label">
					<label>$VAR[Player-StarRating]</label>
					<include>StarRating-Layoutfront</include>
				</control>
			</control>
		</control>
		<!-- infos -->
		<control type="group">
			<animation effect="fade" time="200">VisibleChange</animation>
			<left>700</left>
			<top>680</top>
			<control type="group">
				<animation type="Conditional" condition="String.IsEmpty(MusicPlayer.offset(1).Title)">
					<effect type="slide" start="0,0" end="0,30" time="180" />
				</animation>
				<control type="label" id="1">
					<description>Titel</description>
					<width>910</width>
					<height>25</height>
					<font>BoldCDNormal</font>
					<textcolor>TextColorLight</textcolor>
					<label>Läuft</label>
				</control>
				<control type="label" id="1">
					<description>Interpret - Album</description>
					<top>60</top>
					<width>1110</width>
					<height>25</height>
					<font>MusicvizTitle</font>
					<label>$INFO[MusicPlayer.TrackNumber,,.]$INFO[MusicPlayer.Artist]$INFO[MusicPlayer.Album, - ]</label>
				</control>
				<control type="label">
					<description>Song Titel</description>
					<top>120</top>
					<width>1200</width>
					<height>50</height>
					<include>GlobalScroll</include>
					<font>MusicvizTitleSubTitle</font>
					<textcolor>TextColorMedium</textcolor>
					<label>$INFO[Player.Title]</label>
				</control>
				<control type="label">
					<description>Naechster Titel</description>
					<top>180</top>
					<width>910</width>
					<height>25</height>
					<include>GlobalScroll</include>
					<font>RegularSmall</font>
					<textcolor>TextColorMedium</textcolor>
					<label>Als nächstes: $INFO[MusicPlayer.offset(1).Artist,, - ]$INFO[MusicPlayer.offset(1).Title]</label>
					<animation effect="fade" time="200">VisibleChange</animation>
					<visible>MusicPlayer.HasNext + !String.IsEmpty(MusicPlayer.offset(1).Title)</visible>
				</control>
			</control>
			<control type="group"><!-- progress -->
				<top>230</top>
				<visible>!Window.IsVisible(seekbar)</visible>
				<control type="image">
					<width>920</width>
					<height>30</height>
					<texture colordiffuse="TextColorFO">white.png</texture>
				</control>
				<control type="progress">
					<description>Progress Bar</description>
					<width>920</width>
					<height>30</height>
				</control>
			</control>
		</control>
	</control>
	<control type="group"><!-- Uhrzeit -->
		<left>1470</left>
		<top>42</top>
		<visible>!Window.IsVisible(SelectDialog) + !Window.IsVisible(MusicOSD) + !Window.IsVisible(Notification) + !Window.IsVisible(seekbar)</visible>
		<include>Animation-Popup-OSDDialog</include>
		<animation type="Conditional" condition="Window.IsVisible(volumebar)">
			<effect type="slide" start="0,0" end="-200,0" time="300" />
		</animation>
		<control type="grouplist">
			<width>400</width>
			<height>100</height>
			<itemgap>10</itemgap>
			<align>right</align>
			<orientation>horizontal</orientation>
			<control type="label">
				<include>OSDInfoIconDimension</include>
				<label>á</label>
			</control>
			<control type="label">
				<description>Uhrzeit</description>
				<width>150</width>
				<include>OSDLabelInfoDimension</include><!-- include color ueberschreiben -->
				<label>$INFO[System.Time(hh),,:]$INFO[System.Time(mm)]</label>
			</control>
		</control>
	</control>
	<control type="grouplist"><!-- Playlist Position -->
		<description>Position Abspielliste</description>
		<animation type="WindowOpen" reversible="false">
			<effect type="fade" start="0" end="100" delay="2000" time="950" tween="quadratic" easing="out" />
		</animation>
		<animation type="WindowClose" reversible="false">
			<effect type="fade" start="100" end="0" time="250" tween="cubic" easing="inout" />
		</animation>
		<animation type="Visible" reversible="false">
			<effect type="fade" start="0" end="100" time="650" tween="cubic" easing="inout" />
		</animation>
		<animation type="Hidden" reversible="false">
			<effect type="fade" start="100" end="0" time="250" tween="cubic" easing="inout" />
		</animation>
		<animation type="Conditional" condition="Window.IsVisible(MusicOSD) | Window.IsVisible(seekbar)">
			<effect type="slide" start="0,0" end="0,-160" time="180" />
		</animation>
		<left>1650</left>
		<top>890</top>
		<width>1200</width>
		<height>100</height>
		<itemgap>10</itemgap>
		<visible>!Window.IsVisible(SelectDialog) + !Window.IsVisible(seekbar) + Integer.IsGreater(MusicPlayer.PlaylistLength,1)</visible>
		<orientation>horizontal</orientation>
		<control type="label">
			<include>OSDInfoIconDimension</include>
			<label>&lt;</label>
		</control>
		<control type="label">
			<description>Volume Label</description>
			<width>150</width>
			<include>OSDLabelInfoDimension</include><!-- include color ueberschreiben -->
			<label>$INFO[MusicPlayer.PlaylistPosition]$INFO[MusicPlayer.PlaylistLength,/]</label>
		</control>
	</control>
</controls>
</window>
