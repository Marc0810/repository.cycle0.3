<?xml version="1.0" encoding="UTF-8"?>
<window><!-- Cycle 0.4 -->
<defaultcontrol always="true">3</defaultcontrol>
<onunload>ClearProperty(Skinfont,home)</onunload>
<onunload condition="String.IsEqual(skin.String(SelectDialog),Actor)">SetFocus(9001)</onunload><!-- Focus auf Standardliste -->
<onunload condition="String.IsEqual(skin.String(SelectDialog),Search)">SetFocus(50)</onunload><!-- Sidebar Property fuer Animationen reset -->
<controls>
	<include condition="![String.IsEqual(skin.String(SelectDialog),Actor) | String.IsEqual(skin.String(SelectDialog),Rating) | String.IsEqual(skin.String(SelectDialog),Search)] | String.IsEmpty(skin.String(SelectDialog))">DialogSelect-Standard</include>
	<include condition="String.IsEqual(skin.String(SelectDialog),Rating)">DialogSelect-Rating</include>
	<include condition="String.IsEqual(skin.String(SelectDialog),Actor)">DialogSelect-Actor</include>
	<include condition="String.IsEqual(skin.String(SelectDialog),Search)">DialogSelect-Suche</include>
</controls>
</window>