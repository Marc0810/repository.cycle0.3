		<left>260</left>
		<top>110</top>
		<width>1550</width>
		<height>50</height>
		<include>GlobalScroll</include>
		<font>TitleCapsBig</font>
		<label>$INFO[ListItem.Label]</label>
	</control>
	<control type="grouplist">
		<description>SubTitel</description>
		<left>260</left>
		<top>180</top>
		<width>1050</width>
		<height>50</height>
		<orientation>horizontal</orientation>
		<control type="label">
			<description>Date</description>
			<width>auto</width>
			<height>50</height>
			<label>$INFO[ListItem.Date]</label>
		</control>
		<control type="label">
			<description>Enum</description>
			<width>auto</width>
			<height>50</height>
			<font>EnumRegularNormal</font>
			<label>$VAR[CustomEnumeration]</label>
			<visible>!String.IsEmpty(ListItem.Playcount)</visible>
		</control>
		<control type="label">
			<description>Playcount</description>
			<width>auto</width>
			<height>50</height>
			<label>$INFO[ListItem.Playcount,, mal gesehen]</label>
		</control>
	</control>
