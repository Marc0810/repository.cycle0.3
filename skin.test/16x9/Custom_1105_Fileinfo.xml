		<left>451</left>
		<top>400</top>
		<visible>!String.IsEqual(ListItem.VideoAspect,1.37) + !String.IsEqual(ListItem.VideoAspect,1.33)</visible>
		<control type="image">
			<description>Schatten</description>
			<left>-13</left>
			<top>-13</top>
			<width>1044</width>
			<height>598</height>
			<texture border="8" colordiffuse="ShadowColor">views/shadow8.png</texture>
		</control>
		<control type="image">
			<description>Border</description>
			<left>-5</left>
			<top>-5</top>
			<width>1028</width>
			<height>582</height>
