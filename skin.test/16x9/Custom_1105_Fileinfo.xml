			<description>Fallback icon</description>
			<width>1018</width>
			<height>572</height>
			<align>center</align>
			<font>IconInfoposterdefault</font>
			<textcolor>$VAR[CirclesCol]</textcolor>
			<label>$VAR[Art-Fallback]</label>
		</control>
		<control type="image"><!-- einzelnes cover fallback falls content leer -->
			<width>1018</width>
			<height>572</height>
			<fadetime>400</fadetime>
			<aspectratio>scale</aspectratio>
			<texture background="true">$INFO[ListItem.Art(thumb)]</texture>
		</control>
	</control>
	<control type="group">
		<description>Art 4:3</description>
		<left>555</left>
		<top>400</top>
		<visible>String.IsEqual(ListItem.VideoAspect,1.37) | String.IsEqual(ListItem.VideoAspect,1.33)</visible>
		<control type="image">
			<description>Schatten</description>
			<left>-13</left>
			<top>-13</top>
			<width>809</width>
			<height>598</height>
			<texture border="8" colordiffuse="ShadowColor">views/shadow8.png</texture>
		</control>
		<control type="image">
			<description>Border</description>
			<left>-5</left>
			<top>-5</top>
			<width>793</width>
			<height>582</height>
			<texture border="8" colordiffuse="$VAR[CirclesCol]">views/white8.png</texture>
		</control>
		<control type="image"><!-- fallback -->
			<description>Hintergrundfarbe</description>
			<width>783</width>
			<height>572</height>
			<texture background="true" colordiffuse="$VAR[PrimaryCol]">white.png</texture>
		</control>
		<control type="label">
			<description>Fallback icon</description>
			<width>783</width>
			<height>572</height>
			<align>center</align>
			<font>IconInfoposterdefault</font>
			<textcolor>$VAR[CirclesCol]</textcolor>
