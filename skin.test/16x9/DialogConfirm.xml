<?xml version="1.0" encoding="UTF-8"?>
<window><!-- Cycle 0.4 -->
<zorder>439</zorder><!-- zorder erhoehung für slideshow layout -->
<defaultcontrol>9000</defaultcontrol>
<onload condition="Control.IsVisible(10)">SetFocus(10)</onload>
<onunload condition="!Skin.HasSetting(FirstTimeRun)">Skin.SetString(ColorChangePosition,1)</onunload><!-- first start -->
<onunload condition="!Skin.HasSetting(FirstTimeRun)">ActivateWindow(1195)</onunload><!-- first start -->
<coordinates>
	<system>1</system>
	<origin x="0" y="0">!Window.IsVisible(home)</origin>
	<origin x="0" y="10">Window.IsVisible(home)</origin>
</coordinates>
<controls>
	<control type="progress" id="20"><!-- progress visible geht nicht für zweierlei layouts -->
		<include>HiddenControl</include>
		<info>System.Progressbar</info>
	</control>
	<control type="group"><!-- ok|yes/no Layout -->
		<left>625</left>
		<top>380</top>
		<include>Animation-Popup-Dialog</include>
		<visible>Window.Is(yesnodialog) | Window.Is(okdialog)</visible>
		<control type="image"><!-- Hintergrund -->
			<description>Hintergrund Dialog</description>
			<left>dialogbar.left</left>
			<top>dialogbar.top</top>
			<width>664</width>
			<height>320</height>
			<include>DialogBackground</include>
		</control>
		<control type="image">
			<description>Hintergrund Titel</description>
			<top>dialogbar.top</top>
			<width>670</width>
			<height>75</height>
			<texture border="14,0,14,0" colordiffuse="$VAR[PrimaryCol]" flipy="true">cycle/full-11.png</texture>
		</control>
		<control type="label" id="1"><!-- content -->
			<description>Titel</description>
			<left>bottom.dialogbar.left</left>
			<top>dialogbar.top</top>
			<width>634</width>
			<height>75</height>
			<font>DialogHeaderSmaller</font>
			<textcolor>TextColorFO</textcolor>
			<label></label>
			<include>Animation-VintageFont-8</include>
		</control>
		<control type="textbox" id="9">
			<description>Text</description>
			<left>bottom.dialogbar.left</left>
			<top>70</top>
			<width>624</width>
			<height>130</height>
			<font>RegularSmall</font>
			<label></label>
			<scrolltime>200</scrolltime>
			<autoscroll delay="3000" time="1000" repeat="10000">true</autoscroll>
		</control>
		<control type="grouplist" id="9000">
			<orientation>horizontal</orientation>
			<left>105</left>
			<top>230</top>
			<width>454</width>
			<align>center</align>
			<itemgap>50</itemgap>
			<control type="button" id="11">
				<description>Ja</description>
				<width>200</width>
				<height>50</height>
				<align>center</align>
				<textcolor>TextColorFO</textcolor>
				<texturefocus colordiffuse="$VAR[PrimaryCol]">dialogs/dialogokbutton.png</texturefocus>
				<texturenofocus colordiffuse="$VAR[SecondaryCol]">dialogs/dialogokbuttonnf.png</texturenofocus>
				<label></label>
			</control>
			<control type="button" id="10">
				<description>Nein</description>
				<width>200</width>
				<height>50</height>
				<align>center</align>
				<textcolor>TextColorFO</textcolor>
				<texturefocus colordiffuse="$VAR[PrimaryCol]">dialogs/dialogokbutton.png</texturefocus>
				<texturenofocus colordiffuse="$VAR[SecondaryCol]">dialogs/dialogokbuttonnf.png</texturenofocus>
			</control>
		</control>
	</control>
	<control type="group"><!-- progress Layout -->
		<left>1080</left>
		<top>-137</top>
		<visible>Window.Is(progressdialog)</visible>
		<include>Animation-Topdown-Dialog</include>
		<animation type="Conditional" condition="[Window.IsVisible(volumebar) + !Player.Muted] | Window.IsVisible(Custom_1150_Screensaver.xml) | Window.IsVisible(startup) | Window.IsVisible(Notification) | Window.IsActive(extendedprogressdialog) | Window.IsActive(busydialog) | Window.IsVisible(seekbar) | Window.IsVisible(Custom_1106_Histroyloader.xml)" reversible="true">
			<effect type="fade" start="100" end="0" time="120" tween="cubic" easing="out" />
		</animation>
		<include content="Dialog-Progresskringel">
			<param name="id">20</param>
			<param name="label1id">1</param>
			<param name="label2id">9</param>
		</include>
	</control>
	<control type="group"><!-- progress Slideshow Layout -->
		<left>800</left>
		<top>960</top>
		<visible>Window.Is(progressdialog) + Window.IsVisible(Custom_1150_Screensaver.xml)</visible>
		<include>Animation-OpenCloseVisibleHidden-Fade</include>
		<control type="group">
			<left>-300</left>
			<include content="Dialog-Progresskringel">
				<param name="id">20</param>
				<param name="label1id">1</param>
				<param name="label2id">9</param>
			</include>
		</control>
	</control>
</controls>
</window>