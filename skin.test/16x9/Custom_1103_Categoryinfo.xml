<?xml version="1.0" encoding="UTF-8"?>
<window type="dialog" id="1103"><!-- Cycle 0.4 -->
<backgroundcolor>BackgroundColor</backgroundcolor>
<defaultcontrol always="true">400</defaultcontrol>
<controls>
<include condition="Skin.HasSetting(EnableVintageOverlay)">Vintagebackground</include>
<include condition="!Skin.HasSetting(EnableVintageOverlay)">Cyclebackground</include>
<include condition="!Skin.HasSetting(EnableVintageOverlay)">CyclebackgroundFanart</include>
<include>Topbar</include>
<control type="group">
	<include>Animation-OpenCloseVisibleHidden-Zoom</include>
	<include>Animation395-Conditional-Slide</include>
	<visible>!Window.IsVisible(movieinformation)</visible>
	<control type="group"><!-- info -->
		<left>90</left>
		<top>150</top>
		<description>Info</description>
		<control type="label">
			<width>700</width>
			<height>60</height>
			<include>GlobalScroll</include>
			<font>TitleCapsBig</font>
			<label>$INFO[Container(400).ListItem.Label]</label>
		</control>
		<control type="image">
			<top>100</top>
			<width>700</width>
			<height>112</height>
			<texture colordiffuse="ShadowColor">special://skin/backgrounds/vintage_floral.png</texture>
			<include>Animation-Opacity30</include>
			<visible>Skin.HasSetting(EnableVintageOverlay)</visible>
		</control>
		<control type="group"><!-- subinfo -->
			<animation type="Conditional" condition="!Skin.HasSetting(EnableVintageOverlay)">
				<effect type="slide" start="0,-162" end="0,-162" time="0"/>
			</animation>
			<control type="label">
				<top>215</top>
				<width>700</width>
				<height>60</height>
				<font>SubTitleCapsBold</font>
				<wrapmultiline>true</wrapmultiline>
				<label fallback="Kein Genre gefunden">$INFO[Container(400).ListItem.Genre]</label>
			</control>
			<control type="textbox">
				<top>320</top>
				<width>700</width>
				<height max="363">auto</height>
				<font>Plot</font>
				<label fallback="Kein Überblick gefunden">$INFO[Container(400).ListItem.Plot]</label>
			</control>
			<control type="group">
				<visible>String.Contains(Container(400).ListItem.DBTYPE,movie)</visible>
				<description>Regie bei Film</description>
				<top>780</top>
				<control type="label">
					<include>InfoDetails-Title</include>
					<label>Regie</label>
				</control>
				<control type="label">
					<include>InfoDetails-Label</include>
					<label fallback="nicht verfügbar">$INFO[Container(400).ListItem.Director]</label>
				</control>
			</control>
			<control type="group">
				<description>studio bei serie</description>
				<visible>String.Contains(Container(400).ListItem.DBTYPE,tvshow)</visible>
				<top>780</top>
				<control type="label">
					<include>InfoDetails-Title</include>
					<label>Studio</label>
				</control>
				<control type="label">
					<include>InfoDetails-Label</include>
					<label fallback="nicht verfügbar">$INFO[Container(400).ListItem.Studio]</label>
				</control>
			</control>
			<control type="group">
				<visible>String.Contains(Container(400).ListItem.DBTYPE,movie)</visible>
				<description>dauer bei Film</description>
				<top>910</top>
				<control type="label">
					<include>InfoDetails-Title</include>
					<label>Dauer</label>
				</control>
				<control type="label">
					<include>InfoDetails-Label</include>
					<label fallback="nicht verfügbar">$INFO[Container(400).ListItem.Duration,, min.]</label>
				</control>
			</control>
		</control>
	</control>
	<control type="panel" id="400"><!-- content -->
		<description>Content</description>
		<left>830</left>
		<top>150</top>
		<width>950</width>
		<height>836</height>
		<onleft>close</onleft>
		<onright condition="Integer.IsGreater(Container(400).NumPages,1)">60</onright>
		<onright condition="!Integer.IsGreater(Container(400).NumPages,1)">Dialog.close(1103)</onright>
		<onup>400</onup>
		<ondown>400</ondown>
		<pagecontrol>60</pagecontrol>
		<scrolltime tween="cubic" easing="inout">450</scrolltime>
		<itemlayout width="190" height="280">
			<control type="group">
				<left>33</left>
				<top>11</top>
				<control type="image">
					<description>Schatten</description>
					<left>-10</left>
					<top>-10</top>
					<width>172</width>
					<height>240</height>
					<texture border="8" colordiffuse="ShadowColor">views/shadow8.png</texture>
				</control>
				<control type="image">
					<description>Border</description>
					<left>-4</left>
					<top>-4</top>
					<width>158</width>
					<height>228</height>
					<texture border="8" colordiffuse="$VAR[CirclesCol]">views/white8.png</texture>
				</control>
				<control type="image"><!-- Fallback -->
					<description>Hintergrundfarbe</description>
					<width>150</width>
					<height>220</height>
					<texture colordiffuse="$VAR[PrimaryCol]">white.png</texture>
				</control>
				<control type="label">
					<description>Fallback icon</description>
					<width>150</width>
					<height>220</height>
					<align>center</align>
					<textcolor>$VAR[CirclesCol]</textcolor>
					<font>IconEpisodedefault</font>
					<label>$VAR[Art-Fallback]</label>
				</control>
				<control type="image"><!-- Art -->
					<width>150</width>
					<height>220</height>
					<texture background="true">$INFO[ListItem.Icon]</texture>
				</control>
				<control type="image"><!-- Inaktiv overlay -->
					<width>150</width>
					<height>220</height>
					<texture colordiffuse="$VAR[InaktivImageCol]">white.png</texture>
				</control>
			</control>
		</itemlayout>
		<focusedlayout width="190" height="280">
			<control type="group">
				<left>33</left>
				<top>11</top>
				<animation effect="zoom" start="100" end="120" center="118,140" time="250">Focus</animation>
				<animation effect="zoom" start="120" center="118,140" time="100">UnFocus</animation>
				<control type="image">
					<description>Schatten</description>
					<left>-10</left>
					<top>-10</top>
					<width>172</width>
					<height>240</height>
					<texture border="8" colordiffuse="ShadowColor">views/shadow8.png</texture>
				</control>
				<control type="image">
					<description>Border</description>
					<left>-4</left>
					<top>-4</top>
					<width>158</width>
					<height>228</height>
					<texture border="8" colordiffuse="$VAR[CirclesCol]">views/white8.png</texture>
				</control>
				<control type="image"><!-- Fallback -->
					<description>Hintergrundfarbe</description>
					<width>150</width>
					<height>220</height>
					<texture colordiffuse="$VAR[PrimaryCol]">white.png</texture>
				</control>
				<control type="label">
					<description>Fallback icon</description>
					<width>150</width>
					<height>220</height>
					<align>center</align>
					<font>IconEpisodedefault</font>
					<textcolor>$VAR[CirclesCol]</textcolor>
					<label>$VAR[Art-Fallback]</label>
				</control>
				<control type="image"><!-- Art -->
					<width>150</width>
					<height>220</height>
					<texture background="true">$INFO[ListItem.Art(thumb)]</texture>
				</control>
				<control type="image"><!-- Inaktiv overlay -->
					<width>150</width>
					<height>220</height>
					<texture colordiffuse="$VAR[InaktivImageCol]">white.png</texture>
					<include>Animation-Dim</include>
				</control>
			</control>
		</focusedlayout>
			<content target="video" sortby="title">$VAR[Content-Focus]</content>
			<onclick>Dialog.close(1103)</onclick>
			<onclick condition="String.IsEmpty(ListItem.Duration)">ActivateWindow(Videos,&quot;videodb://tvshows/titles/$INFO[ListItem.DBID]/&quot;)</onclick>
			<onclick condition="!String.IsEmpty(ListItem.Duration)">PlayMedia($INFO[ListItem.FilenameAndPath])</onclick>
	</control>
	<control type="scrollbar" id="60"><!-- Scroller -->
		<left>1830</left>
		<top>160</top>
		<height>810</height>
		<onleft>400</onleft>
		<onright>400</onright>
	</control>
</control>
</controls>
</window>

