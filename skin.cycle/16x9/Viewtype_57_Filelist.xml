			<left>1800</left>
			<top>140</top>
			<width>6</width>
			<height>825</height>
			<onleft>57</onleft>
			<onright condition="[Container.Content(albums) | Container.Content(artists) | Container.Content(songs) | Container.Content(addons)] + [String.IsEqual(Container.SortMethod,$LOCALIZE[556]) | String.IsEqual(Container.SortMethod,$LOCALIZE[558]) | String.IsEqual(Container.SortMethod,$LOCALIZE[557]) | String.IsEqual(Container.SortMethod,$LOCALIZE[578])]">SetFocus(62)</onright><!-- SMS bei sortierung titel/album/artist/artist-year -->
