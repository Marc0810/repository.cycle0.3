		<control type="label">
			<description>Volume Label</description>
			<left>90</left>
			<width>150</width>
			<height>70</height>
			<font>BoldCDNormal</font>
			<textcolor>$VAR[OSDDialogColor]</textcolor>
			<label>$INFO[Player.Volume]</label>
			<visible>!Player.Muted</visible>
		</control>
	</control>
</control>
<control type="group">
	<left>1580</left>
	<top>-120</top>
	<description>Default layout</description>
	<include>Dialog_topdown_Animation</include>
	<control type="image">
		<description>Hintergrund oben diffuse</description>
		<left>-12</left>
		<top>-10</top>
		<width>100</width>
		<height>88</height>
		<texture colordiffuse="VideooverlayVignette">dialogs/NowPlayingRoundOverlay.png</texture>
		<visible>[Window.IsVisible(fullscreenvideo) | Window.IsVisible(visualisation)] + ![Window.IsVisible(fullscreeninfo) | Window.IsVisible(musicosd) | Window.IsVisible(videoosd) | Window.IsVisible(seekbar)]</visible>
