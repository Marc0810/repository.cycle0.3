	</control>
</control>
<control type="group">
	<description>Passthrough layout</description>
	<left>1625</left>
	<top>-120</top>
	<visible>player.passthrough</visible>
	<visible>!Player.Muted + !Window.IsActive(startup)</visible>
	<control type="label">
		<description>Passthrough Label</description>
		<left>90</left>
		<top>-15</top>
		<width>495</width>
		<height>30</height>
		<label>$LOCALIZE[29802]</label>
		<textcolor>$VAR[OSDDialogColor]</textcolor>
	</control>
</control>
