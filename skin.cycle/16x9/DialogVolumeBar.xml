<?xml version="1.0" encoding="UTF-8"?>
<window>
<!-- Cycle 0.3 -->
<defaultcontrol always="true">-</defaultcontrol>
<coordinates>
	<origin x="0" y="5">!Window.IsVisible(home)</origin>
	<origin x="0" y="0">Window.IsVisible(home)</origin>
</coordinates>
<zorder>154</zorder>
<controls>
<control type="group"><!-- Volume - mit im custom overlay fuer fullscreens -->
	<left>1625</left>
	<top>-126</top>
	<description>Default layout</description>
	<include>Dialog_topdown_Animation</include>
	<visible>!Player.Muted + !Window.IsVisible(startup)</visible>
	<animation type="Conditional" condition="[Window.IsVisible(Notification) | Window.IsActive(busydialog) | Window.IsVisible(Custom_1118_Histroyloader.xml)]" reversible="true">
		<effect type="fade" start="100" end="0" time="120" tween="cubic" easing="out" />
	</animation>
	<control type="image">
		<description>Hintergrund oben diffuse</description>
		<left>-1625</left>
		<top>-63</top>
		<width>1920</width>
		<height>266</height>
		<texture border="1" colordiffuse="VideooverlayVignette">dialogs/nowplayingoverlay.png</texture>
		<visible>Window.IsVisible(fullscreenvideo) + ![Window.IsVisible(fullscreeninfo) | Window.IsVisible(videoosd) | Window.IsVisible(seekbar)]</visible>
	</control>
	<control type="grouplist">
		<width>240</width>
		<height>70</height>
		<align>right</align>
		<orientation>horizontal</orientation>
		<control type="label">
			<width>90</width>
			<height>70</height>
			<font>IconVolume</font>
			<textcolor>$VAR[OSDDialogColor]</textcolor>
			<label>$VAR[DialogVolumeVAR]</label>
		</control>
		<control type="label">
			<description>Volume Label</description>
			<left>90</left>
			<width>150</width>
			<height>70</height>
			<font>BoldCDNormal</font>
			<textcolor>$VAR[OSDDialogColor]</textcolor>
			<label>$INFO[Player.Volume]</label>
			<visible>!Player.Muted</visible>
		</control>
	</control>
</control>
</controls>
</window>