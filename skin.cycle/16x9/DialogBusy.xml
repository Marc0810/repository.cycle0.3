<?xml version="1.0" encoding="UTF-8"?>
<window>
<!-- Cycle 0.3 -->
<coordinates>
	<left>1090</left>
	<top>-134</top>
</coordinates>
<zorder>235</zorder><!-- zorder erhoehung fÃ¼r slideshow layout -->
<controls>
<control type="group">
	<include>Dialog_topdown_Animation</include>
	<visible>!Window.IsActive(extendedprogressdialog) + !Window.IsVisible(Custom_1150_Screensaver.xml) + !Window.IsVisible(startup) + !Window.IsVisible(DialogNotification.xml) + !Window.IsVisible(Custom_1118_Histroyloader.xml) + !System.HasModalDialog + !Window.IsVisible(volumebar)</visible>
	<control type="label" id="30">
		<description>Busy label</description>
		<top>32</top>
		<width>665</width>
		<height>27</height>
		<align>right</align>
		<font>BoldSmall</font>
		<textcolor>$VAR[OSDDialogColor]</textcolor>
		<label>Arbeitet...</label>
	</control>
	<control type="group"><!-- progress -->
		<description>Progress</description>
		<left>670</left>
		<top>15</top>
		<control type="image">
			<description>Laden Kreis mit Animation</description>
			<width>80</width>
			<height>80</height>
			<texture colordiffuse="$VAR[primaryCol]">dialogs/search/progress.png</texture>
			<animation effect="rotate" center="40,40" start="360" end="0" time="1500" loop="true" condition="true">Conditional</animation>
		</control>
		<control type="label">
			<description>Text Prozentstatus hidden Progress Control</description>
			<width>80</width>
			<height>80</height>
			<align>center</align>
			<font>BoldCDProgress</font>
			<textcolor>$VAR[OSDDialogColor]</textcolor>
			<label>$INFO[Control.GetLabel(10),,%]</label>
		</control>
	</control>
	<control type="progress" id="10">
		<include>HiddenControl</include>
	</control>
</control>
<control type="group"><!-- Slideshow Layout check -->
	<left>900</left>
	<top>970</top>
	<visible>Window.IsVisible(Custom_1150_Screensaver.xml)</visible>
	<animation type="Visible" reversible="false">
		<effect type="fade" delay="1000" time="600" start="0" end="100" tween="cubic" easing="out" />
	</animation>
	<animation type="Hidden" reversible="false">
		<effect type="fade" time="100" start="100" end="0" tween="cubic" easing="out" />
	</animation>
	<control type="group"><!-- progress -->
		<description>Progress</description>
		<left>-80</left>
		<top>15</top>
		<control type="image">
			<description>Laden Kreis mit Animation</description>
			<width>70</width>
			<height>70</height>
			<texture colordiffuse="$VAR[primaryCol]">dialogs/search/progress.png</texture>
			<animation effect="rotate" center="35,35" start="360" end="0" time="1500" loop="true" condition="true">Conditional</animation>
		</control>
		<control type="label">
			<description>Prozentanzeige aus Hidden Progress ID32</description>
			<width>70</width>
			<height>70</height>
			<align>center</align>
			<font>BoldCDProgress</font>
			<textcolor>$VAR[OSDDialogColor]</textcolor>
			<label>$INFO[Control.GetLabel(32),,%]</label>
		</control>
	</control>
	<control type="label">
		<description>Busy Label</description>
		<top>22</top>
		<width>665</width>
		<height>27</height>
		<font>BoldSmall</font>
		<textcolor>$VAR[OSDDialogColor]</textcolor>
		<label>Arbeitet...</label>
	</control>
</control>
</controls>
</window>