<?xml version="1.0" encoding="UTF-8"?>
<window type="dialog" id="1103">
<!-- Cycle 0.3 -->
<menucontrol>9700</menucontrol>
<defaultcontrol always="true">400</defaultcontrol>
<controls>
<include condition="Skin.HasSetting(EnableVintageOverlay)">global_vintagebackground</include>
<include condition="!Skin.HasSetting(EnableVintageOverlay)">global_background</include>
<include condition="!Skin.HasSetting(EnableVintageOverlay)">global_fanart</include>
<include>global_topbar</include>
<control type="group">
	<include>Open_Close_Visible_Hidden_Zoom_Animation</include>
	<include>Conditional_Left_Slide_Animation395</include>
	<control type="group"><!-- info -->
		<left>90</left>
		<top>150</top>
		<description>Info</description>
		<control type="label">
			<width>700</width>
			<height>60</height>
			<scroll>true</scroll>
			<scrollspeed>20</scrollspeed>
			<font>TitleCapsBig</font>
			<label>$INFO[Container(400).ListItem.Label]</label>
		</control>
		<control type="image">
			<top>100</top>
			<width>700</width>
			<height>112</height>
			<texture colordiffuse="ShadowColor">special://skin/backgrounds/vintage_floral.png</texture>
			<visible>Skin.HasSetting(EnableVintageOverlay)</visible>
			<animation type="Conditional" condition="true">
				<effect type="fade" start="30" end="30" time="0" />
			</animation>
		</control>
		<control type="group"><!-- subinfo -->
			<animation type="Conditional" condition="!Skin.HasSetting(EnableVintageOverlay)">
				<effect type="slide" start="0,-162" end="0,-162" time="0"/>
			</animation>
			<control type="label">
				<top>215</top>
				<width>700</width>
				<height>60</height>
				<font>SubTitleCapsBold</font>
				<wrapmultiline>true</wrapmultiline>
				<label fallback="Kein Genre gefunden">$INFO[Container(400).ListItem.Genre]</label>
			</control>
			<control type="textbox">
				<top>320</top>
				<width>700</width>
				<height max="363">auto</height>
				<font>Plot</font>
				<autoscroll time="5000" delay="8000" repeat="5000">true</autoscroll>
				<label fallback="Kein Überblick gefunden">$INFO[Container(400).ListItem.Plot]</label>
			</control>
			<control type="group">
				<visible>String.Contains(Container(400).ListItem.DBTYPE,movie)</visible>
				<description>Drehbuch bei Film</description>
				<top>780</top>
				<control type="label">
					<include>info_details_title</include>
					<label>$LOCALIZE[20339]</label>
				</control>
				<control type="label">
					<include>info_details_label</include>
					<label fallback="nicht verfügbar">$INFO[Container(400).ListItem.Director]</label>
				</control>
			</control>
			<control type="group">
				<description>studio bei serie</description>
				<visible>String.Contains(Container(400).ListItem.DBTYPE,tvshow)</visible>
				<top>780</top>
				<control type="label">
					<include>info_details_title</include>
					<label>$LOCALIZE[572]</label>
				</control>
				<control type="label">
					<include>info_details_label</include>
					<label fallback="nicht verfügbar">$INFO[Container(400).ListItem.Studio]</label>
				</control>
			</control>
		</control>
	</control>
	<control type="panel" id="400"><!-- content -->
		<description>Content</description>
		<left>840</left>
		<top>150</top>
		<width>910</width>
		<height>840</height>
		<onleft>close</onleft>
		<onright condition="Integer.IsGreater(Container(400).NumPages,1)">60</onright>
		<onright condition="!Integer.IsGreater(Container(400).NumPages,1)">Dialog.close(1103)</onright>
		<onup>400</onup>
		<ondown>400</ondown>
		<pagecontrol>60</pagecontrol>
		<viewtype label="Big Panel">Big Panel</viewtype>
		<itemlayout width="180" height="280">
			<control type="group">
				<left>33</left>
				<top>11</top>
				<control type="image">
					<description>Schatten</description>
					<left>-10</left>
					<top>-10</top>
					<width>172</width>
					<height>240</height>
					<texture border="8" colordiffuse="ShadowColor">views/shadow8.png</texture>
				</control>
				<control type="image">
					<description>Border</description>
					<left>-4</left>
					<top>-4</top>
					<width>158</width>
					<height>228</height>
					<texture border="8" colordiffuse="$VAR[CirclesCol]">views/white8.png</texture>
				</control>
				<control type="image"><!-- Fallback -->
					<description>Hintergrund Farbe</description>
					<width>150</width>
					<height>220</height>
					<texture colordiffuse="$VAR[PrimaryCol]">white.png</texture>
				</control>
				<control type="label">
					<description>Fallback icon</description>
					<width>150</width>
					<height>220</height>
					<align>center</align>
					<textcolor>$VAR[CirclesCol]</textcolor>
					<font>IconEpisodedefault</font>
					<label>$VAR[viewtypefallbacks]</label>
				</control>
				<control type="image"><!-- Art -->
					<width>150</width>
					<height>220</height>
					<texture background="true">$INFO[ListItem.Art(thumb)]</texture>
				</control>
				<control type="image"><!-- Inaktiv overlay -->
					<width>150</width>
					<height>220</height>
					<texture colordiffuse="$VAR[InaktivImageDiffuse]">white.png</texture>
				</control>
			</control>
		</itemlayout>
		<focusedlayout width="180" height="280">
			<control type="group">
				<left>33</left>
				<top>11</top>
				<animation effect="zoom" start="100" end="120" time="250" center="118,140">Focus</animation>
				<animation effect="zoom" start="120" time="100" center="118,140">UnFocus</animation>
				<control type="image">
					<description>Schatten</description>
					<left>-10</left>
					<top>-10</top>
					<width>172</width>
					<height>240</height>
					<texture border="8" colordiffuse="ShadowColor">views/shadow8.png</texture>
				</control>
				<control type="image">
					<description>Border</description>
					<left>-4</left>
					<top>-4</top>
					<width>158</width>
					<height>228</height>
					<texture border="8" colordiffuse="$VAR[CirclesCol]">views/white8.png</texture>
				</control>
				<control type="image"><!-- Fallback -->
					<description>Hintergrund Farbe</description>
					<width>150</width>
					<height>220</height>
					<texture colordiffuse="$VAR[PrimaryCol]">white.png</texture>
				</control>
				<control type="label">
					<description>Fallback icon</description>
					<width>150</width>
					<height>220</height>
					<align>center</align>
					<font>IconEpisodedefault</font>
					<textcolor>$VAR[CirclesCol]</textcolor>
					<label>$VAR[viewtypefallbacks]</label>
				</control>
				<control type="image"><!-- Art -->
					<width>150</width>
					<height>220</height>
					<texture background="true">$INFO[ListItem.Art(thumb)]</texture>
				</control>
				<control type="image"><!-- Inaktiv overlay -->
					<width>150</width>
					<height>220</height>
					<texture colordiffuse="$VAR[InaktivImageDiffuse]">white.png</texture>
					<include>Dimmer_Animation</include>
				</control>
			</control>
		</focusedlayout>
			<content target="video" sortby="title">$VAR[content_focus]</content>
			<onclick>Dialog.close(1103)</onclick>
			<onclick condition="String.IsEmpty(ListItem.Duration)">ActivateWindow(Videos,&quot;videodb://tvshows/titles/$INFO[ListItem.DBID]/&quot;)</onclick>
			<onclick condition="!String.IsEmpty(ListItem.Duration)">PlayMedia($INFO[ListItem.FilenameAndPath])</onclick>
	</control>
	<control type="scrollbar" id="60"><!-- Scroller -->
		<left>1800</left>
		<top>160</top>
		<width>6</width>
		<height>840</height>
		<onleft>400</onleft>
		<onright>400</onright>
	</control>
</control>
</controls>
</window>

