<?xml version="1.0" encoding="UTF-8"?>
<window>
<!-- Cycle 0.3 -->
<defaultcontrol always="true">9000</defaultcontrol>
<controls>
<include condition="Skin.HasSetting(EnableVintageOverlay)">global_vintagebackground</include>
<include condition="!Skin.HasSetting(EnableVintageOverlay)">global_background</include>
<control type="group">
	<left>50</left>
	<include>Open_Close_Visible_Hidden_Zoom_Animation</include>
	<visible>!Window.IsVisible(Slideshow)</visible>
	<!-- Bar -->
	<control type="image">
		<description>Circles Bar</description>
		<left>-500</left>
		<top>594</top>
		<width>6000</width>
		<height>152</height>
		<texture colordiffuse="$VAR[CirclesCol]">views/info/bar.png</texture>
	</control>
	<control type="list" id="9000"><!-- menue -->
		<top>594</top>
		<left>680</left>
		<width>900</width>
		<height>152</height>
		<onup>60</onup>
		<ondown>Dialog.close(all,true)</ondown>
		<onleft>noop</onleft>
		<onright>5000</onright>
		<oninfo>Dialog.close(all,true)</oninfo>
		<orientation>horizontal</orientation>
		<itemlayout width="222">
			<control type="image">
				<width>192</width>
				<height>152</height>
				<texture colordiffuse="$VAR[CirclesColInner]">rings/inner-ring.png</texture>
			</control>
			<include>CircleInfoIcon</include>
			<control type="image">
				<width>192</width>
				<height>152</height>
				<texture colordiffuse="$VAR[CirclesCol]">rings/outer-ring.png</texture>
			</control>
		</itemlayout>
		<focusedlayout width="222">
			<control type="image">
				<width>192</width>
				<height>152</height>
				<texture colordiffuse="$VAR[SecondaryCol]">rings/inner-ring.png</texture>
				<visible>Control.HasFocus(9000)</visible>
			</control>
			<control type="image">
				<width>192</width>
				<height>152</height>
				<texture colordiffuse="$VAR[CirclesColInner]">rings/inner-ring.png</texture>
				<visible>!Control.HasFocus(9000)</visible>
			</control>
			<include>CircleInfoIcon</include>
			<control type="image">
				<width>192</width>
				<height>152</height>
				<texture colordiffuse="$VAR[CirclesCol]">rings/outer-ring.png</texture>
			</control>
		</focusedlayout>
		<content>
			<item id="1">
				<label>$LOCALIZE[108]</label>
				<onclick>close</onclick>
				<onclick>SendClick(pictures,6)</onclick>
				<label2>À</label2>
			</item>
			<item id="2">
				<label>$LOCALIZE[361]</label>
				<onclick>Skin.SetString(SelectDialog,Standard)</onclick>
				<onclick>close</onclick>
				<onclick>SendClick(pictures,7)</onclick>
				<label2>Á</label2>
			</item>
		</content>
	</control>
	<control type="group"><!-- thumb -->
		<description>Art</description>
		<left>66</left>
		<top>239</top>
		<control type="image">
			<description>Schatten</description>
			<left>-13</left>
			<top>-13</top>
			<width>598</width>
			<height>598</height>
			<texture border="8" colordiffuse="ShadowColor">views/shadow8.png</texture>
		</control>
		<control type="image">
			<description>Border</description>
			<left>-5</left>
			<top>-5</top>
			<width>582</width>
			<height>582</height>
			<texture border="8" colordiffuse="TextColorFO">views/white8.png</texture>
		</control>
		<control type="image"><!-- Fallback -->
			<description>Hintergrund Farbe</description>
			<width>572</width>
			<height>572</height>
			<texture colordiffuse="$VAR[PrimaryCol]">white.png</texture>
			<aspectratio>scale</aspectratio>
		</control>
		<control type="image">
			<width>572</width>
			<height>572</height>
			<texture background="true">$INFO[ListItem.Icon]</texture>
			<aspectratio align="center" aligny="center">scale</aspectratio>
		</control>
	</control>
	<control type="group"><!-- Top Info -->
		<left>700</left>
		<top>139</top>
		<control type="label">
			<description>Titel</description>
			<width>1150</width>
			<height>60</height>
			<font>TitleCapsBig</font>
			<label>$INFO[ListItem.FileName]$INFO[ListItem.Date, [COLOR=TextColorLight(,)[/COLOR]]</label>
		</control>
		<control type="list" id="5"><!-- list -->
			<description>Exif liste</description>
			<top>96</top>
			<width>950</width>
			<height>300</height>
			<onleft>60</onleft>
			<onright>60</onright>
			<onup>noop</onup>
			<ondown>9000</ondown>
			<pagecontrol>60</pagecontrol>
			<scrolltime>200</scrolltime>
			<itemlayout width="950" height="50">
				<control type="label">
					<width>350</width>
					<height>50</height>
					<font>Plot</font>
					<label>$INFO[ListItem.Label]</label>
					<textcolor>TextColorMedium</textcolor>
				</control>
				<control type="label">
					<left>350</left>
					<width>600</width>
					<height>50</height>
					<font>Plot</font>
					<label>$INFO[ListItem.Label2]</label>
				</control>
			</itemlayout>
			<focusedlayout width="950" height="50">
				<control type="label">
					<width>350</width>
					<height>50</height>
					<font>Plot</font>
					<label>$INFO[ListItem.Label]</label>
					<textcolor>TextColorMedium</textcolor>
				</control>
				<control type="label">
					<left>350</left>
					<width>600</width>
					<height>50</height>
					<font>Plot</font>
					<label>$INFO[ListItem.Label2]</label>
				</control>
			</focusedlayout>
		</control>
		<control type="scrollbar" id="60">
			<left>980</left>
			<top>96</top>
			<width>6</width>
			<height>300</height>
			<onleft>9000</onleft>
			<onright>5</onright>
			<onup>60</onup>
			<ondown>60</ondown>
			<visible>Control.IsVisible(5)</visible>
		</control>
	</control>
	<control type="group"><!-- Subinfo -->
		<description>Belichtung</description>
		<left>700</left>
		<top>800</top>
		<control type="label">
			<include>info_details_title</include>
			<label>Belichtung</label>
		</control>
		<control type="label">
			<include>info_details_label</include>
			<label fallback="nicht verfügbar">$INFO[ListItem.PictureISO]</label>
		</control>
	</control>
	<control type="group">
		<description>Kameramodell</description>
		<left>1260</left>
		<top>800</top>
		<control type="label">
			<include>info_details_title</include>
			<label>Kamera</label>
		</control>
		<control type="label">
			<include>info_details_label</include>
			<label fallback="nicht verfügbar">$INFO[ListItem.PictureCamModel]</label>
		</control>
	</control>
</control>
</controls>
</window>