<?xml version="1.0" encoding="UTF-8"?>
<!-- Cycle 0.3 -->
<window>
<visible>!Window.IsVisible(fullscreeninfo) + [VideoPlayer.IsFullscreen | Window.IsVisible(visualisation)] + [Player.Seeking | Player.DisplayAfterSeek | Player.Paused | Player.Forwarding | Player.Rewinding]</visible>
<controls>
<control type="image">
	<description>Hintergrund oben diffuse</description>
	<width>1920</width>
	<height>206</height>
	<texture border="1" colordiffuse="VideooverlayVignette">dialogs/nowplayingoverlay.png</texture>
	<include>Open_Close_Fade_Animation</include>
	<visible>!Window.IsVisible(visualisation)</visible>
</control>
<control type="group">
	<include>OSDDialog_popup_Animation</include>
	<control type="group"><!-- player status -->
		<description>Status oben info left - player status</description>
		<left>155</left>
		<top>42</top>
		<visible>!Window.IsVisible(videobookmarks) + !Window.IsVisible(DialogSettings.xml)</visible>
		<control type="grouplist">
			<width>600</width>
			<height>60</height>
			<itemgap>10</itemgap>
			<orientation>horizontal</orientation>
			<control type="label">
				<description>Status icon</description>
				<include>OSDInfoIconDimension</include>
				<label>$VAR[Player_Statusicon]</label>
			</control>
			<control type="label">
				<description>Status Label</description>
				<width>400</width>
				<label>$VAR[Player_Status]</label>
				<include>OSDLabelInfoDimension</include>
			</control>
		</control>
	</control>
	<control type="group">
		<left>1334</left>
		<top>42</top>
		<description>Status oben info right - Zeit und Endzeit</description>
		<include>VideoPlayerOSD.right.top.info</include>
	</control>
	<control type="group">
		<top>110</top>
		<description>Status unten</description>
		<include>VideoPlayerOSD.down.info</include>
	</control>
</control>
</controls>
</window>