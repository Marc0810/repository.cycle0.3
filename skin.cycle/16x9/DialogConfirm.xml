<?xml version="1.0" encoding="UTF-8"?>
<window>
<onunload condition="!Skin.HasSetting(FirstTimeRun)">ActivateWindow(1195)</onunload><!-- first start -->
<onunload condition="!Skin.HasSetting(FirstTimeRun)">Skin.SetString(ColorChangePosition,1)</onunload><!-- first start -->
<!-- Cycle 0.3 -->
<coordinates>
	<system>1</system>
	<origin x="0" y="0">!Window.IsVisible(home)</origin>
	<origin x="0" y="10">Window.IsVisible(home)</origin>
</coordinates>
<zorder>439</zorder><!-- zorder erhoehung für slideshow layout -->
<controls>
<control type="progress" id="20"><!-- progress visible geht nicht für zweierlei layouts -->
	<include>HiddenControl</include>
	<info>System.Progressbar</info>
</control>
<control type="group"><!-- ok|yes/no default Layout -->
	<left>625</left>
	<top>380</top>
	<include>Dialog_popup_Animation</include>
	<visible>Window.Is(yesnodialog) | Window.Is(okdialog)</visible>
	<control type="image"><!-- Hintergrund -->
		<description>Hintergrund Dialog</description>
		<left>dialogbar.left</left>
		<top>dialogbar.top</top>
		<width>664</width>
		<height>320</height>
		<include>DialogBackground</include>
	</control>
	<control type="image">
		<description>Hintergrund Titel</description>
		<top>dialogbar.top</top>
		<width>670</width>
		<height>75</height>
		<texture border="14,0,14,0" colordiffuse="$VAR[PrimaryCol]" flipy="true">cycle/full-11.png</texture>
	</control>
	<control type="label" id="1"><!-- content -->
		<description>Titel</description>
		<left>bottom.dialogbar.left</left>
		<top>dialogbar.top</top>
		<width>634</width>
		<height>75</height>
		<font>DialogHeader</font>
		<textcolor>TextColorFO</textcolor>
		<label></label>
		<include>VintageDialogTitel_Animation</include>
	</control>
	<control type="textbox" id="9">
		<description>Text</description>
		<left>bottom.dialogbar.left</left>
		<top>70</top>
		<width>624</width>
		<height max="130">auto</height>
		<font>RegularSmall</font>
		<label></label>
		<autoscroll>false</autoscroll>
	</control>
	<control type="grouplist" id="9000">
		<orientation>horizontal</orientation>
		<left>105</left>
		<top>230</top>
		<width>454</width>
		<align>center</align>
		<itemgap>50</itemgap>
		<control type="button" id="11">
			<description>Ja</description>
			<width>200</width>
			<height>50</height>
			<align>center</align>
			<textcolor>TextColorFO</textcolor>
			<texturefocus colordiffuse="$VAR[PrimaryCol]">dialogs/dialokokbutton.png</texturefocus>
			<texturenofocus colordiffuse="$VAR[SecondaryCol]">dialogs/dialokokbuttonnf.png</texturenofocus>
			<label></label>
		</control>
		<control  type="button" id="10">
			<description>Nein</description>
			<width>200</width>
			<height>50</height>
			<align>center</align>
			<textcolor>TextColorFO</textcolor>
			<texturefocus colordiffuse="$VAR[PrimaryCol]">dialogs/dialokokbutton.png</texturefocus>
			<texturenofocus colordiffuse="$VAR[SecondaryCol]">dialogs/dialokokbuttonnf.png</texturenofocus>
		</control>
	</control>
</control>
<control type="group"><!-- progress fake Layout -->
	<left>1080</left>
	<top>-137</top>
	<visible>Window.Is(progressdialog)</visible>
	<include>Dialog_topdown_Animation</include>
	<animation type="Conditional" condition="[Window.IsVisible(volumebar) + !Player.Muted] | Window.IsVisible(Custom_1150_Screensaver.xml) | Window.IsVisible(startup) | Window.IsVisible(Notification) | Window.IsActive(extendedprogressdialog) | Window.IsActive(busydialog) | Window.IsVisible(seekbar) | Window.IsVisible(Custom_1118_Histroyloader.xml)" reversible="true">
		<effect type="fade" start="100" end="0" time="120" tween="cubic" easing="out" />
	</animation>
	<include content="DialogDefaultProgresskringel">
		<param name="id">20</param>
		<param name="label1id">1</param>
		<param name="label2id">9</param>
	</include>
</control>
<control type="group"><!-- progress Slideshow Layout -->
	<left>800</left>
	<top>960</top>
	<visible>Window.Is(progressdialog) + Window.IsVisible(Custom_1150_Screensaver.xml)</visible>
	<animation type="Visible" reversible="false">
		<effect type="fade" delay="1000" time="600" start="0" end="100" tween="cubic" easing="out" />
	</animation>
	<animation type="Hidden" reversible="false">
		<effect type="fade" time="100" start="100" end="0" tween="cubic" easing="out" />
	</animation>
	<control type="group">
		<left>-300</left>
		<include content="DialogDefaultProgresskringel">
			<param name="id">20</param>
			<param name="label1id">1</param>
			<param name="label2id">9</param>
		</include>
	</control>
</control>
</controls>
</window>