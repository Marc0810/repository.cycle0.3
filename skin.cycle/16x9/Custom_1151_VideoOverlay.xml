<?xml version="1.0" encoding="UTF-8"?>
<window type="dialog" id="1151">
<!-- Cycle 0.3 -->
<zorder>135</zorder><!-- zorder hoeher fuer volumebar darueber -->
<onload>SetProperty(RefreshList3,1)</onload>
<visible>Window.IsVisible(fullscreenvideo) + VideoPlayer.Content(episodes) + [!Window.IsVisible(seekbar) + !Window.IsVisible(fullscreeninfo) + !Window.IsVisible(VideoOSD)]</visible>
<controls>
<control type="group"><!-- Next Item Hidden Controls -->
	<top>-200</top>
	<description>Next playliste item hiden - container autoscroll bis match aktueller titel, offset 1 = neachstes</description>
	<control type="label" id="111">
		<include>HiddenControl</include>
		<label>$INFO[VideoPlayer.Title]</label>
	</control>
	<control type="label" id="112">
		<include>HiddenControl</include>
		<label>$INFO[Container(222).ListItem.Title]</label>
	</control>
	<animation type="Conditional" condition="true">
		<effect type="fade" start="0" end="0" time="0" />
	</animation>
	<control type="list" id="222">
		<width>1800</width>
		<height>270</height>
		<orientation>horizontal</orientation>
		<viewtype>list</viewtype>
		<autoscroll time="300" delay="100" repeat="5000">!String.IsEqual(Control.GetLabel(111),Control.GetLabel(112))</autoscroll>
		<pagecontrol>-</pagecontrol>
		<scrolltime tween="sine" easing="out">10</scrolltime>
		<itemlayout width="400" height="70">
			<control type="label">
				<width>400</width>
				<height>70</height>
				<font>BoldCDNormal</font>
				<wrapmultiline>false</wrapmultiline>
				<scroll>true</scroll>
				<textcolor>ACDIF_100</textcolor>
				<label>$INFO[ListItem.Title]</label>
			</control>
		</itemlayout>
		<focusedlayout width="400" height="70">
			<control type="label">
				<width>400</width>
				<height>70</height>
				<font>BoldCDNormal</font>
				<wrapmultiline>false</wrapmultiline>
				<scroll>true</scroll>
				<textcolor>ACDIF_100</textcolor>
				<label>$INFO[ListItem.Title]</label>
			</control>
		</focusedlayout>
		<content target="video">$VAR[NPPlaylist]</content>
	</control>
</control>
<control type="image"><!-- laeuft gerade 30 Sekunden am Anfang -->
	<width>1920</width>
	<height>206</height>
	<visible>[!Window.IsVisible(seekbar) + !Window.IsVisible(fullscreeninfo) + !Player.Muted + !Window.IsVisible(volumebar) + !Window.IsVisible(Custom_1197_ColorTimeRefresh.xml)]</visible>
	<visible>!Integer.IsGreater(VideoPlayer.Time,30)</visible>
	<texture border="1" colordiffuse="VideooverlayVignette">dialogs/NowPlayingOverlay.png</texture>
	<include>Open_Close_Fade_Animation</include>
</control>
<control type="grouplist">
	<description>Laeuft gerade 30Sek. am Anfang</description>
	<left>165</left>
	<top>30</top>
	<width>1590</width>
	<height>100</height>
	<itemgap>10</itemgap>
	<orientation>horizontal</orientation>
	<visible>[!Window.IsVisible(seekbar) + !Window.IsVisible(fullscreeninfo) + !Window.IsVisible(Custom_1197_ColorTimeRefresh.xml)]</visible>
	<visible>!Integer.IsGreater(VideoPlayer.Time,30)</visible>
	<include>OSDDialog_popup_Animation</include>
	<control type="label">
		<include>OSDInfoIconDimension</include>
		<label>à</label>
	</control>
	<control type="label">
		<description>Serien</description>
		<width>1500</width>
		<include>OSDLabelInfoDimension</include>
		<label>Läuft: $INFO[VideoPlayer.TVShowTitle]$VAR[CustomEnumeration]$VAR[VideoPlayerSeasonPrefix-long, , ]$VAR[VideoPlayerEpisodePrefix-long,, ]$INFO[VideoPlayer.Title]</label>
		<visible>VideoPlayer.Content(episodes)</visible>
	</control>
	<control type="label">
		<description>Filme</description>
		<width>1500</width>
		<include>OSDLabelInfoDimension</include>
		<label>Läuft: $INFO[VideoPlayer.Title]</label>
		<visible>!VideoPlayer.Content(episodes)</visible>
	</control>
</control>
<control type="image"><!-- als naechstes 120 Sekunden am Ende -->
	<width>2220</width>
	<height>206</height>
	<visible>[!Window.IsVisible(seekbar) + !Window.IsVisible(fullscreeninfo) + !Window.IsVisible(Custom_1197_ColorTimeRefresh.xml)]</visible>
	<visible>!Integer.IsGreater(Player.TimeRemaining,120)</visible>
	<visible>String.IsEqual(Control.GetLabel(111),Control.GetLabel(112))</visible>
	<texture border="1" colordiffuse="VideooverlayVignette">dialogs/NowPlayingOverlay.png</texture>
	<include>Open_Close_Fade_Animation</include>
</control>
<control type="grouplist">
	<description>Als naechstes 120 Sekunden am Ende</description>
	<left>165</left>
	<top>30</top>
	<width>1590</width>
	<height>100</height>
	<itemgap>10</itemgap>
	<orientation>horizontal</orientation>
	<visible>[!Window.IsVisible(seekbar) + !Window.IsVisible(fullscreeninfo) + !Window.IsVisible(Custom_1197_ColorTimeRefresh.xml)]</visible>
	<visible>!Integer.IsGreater(Player.TimeRemaining,120)</visible>
	<visible>String.IsEqual(Control.GetLabel(111),Control.GetLabel(112))</visible>
	<include>OSDDialog_popup_Animation</include>
	<control type="label">
		<description>Laeuft icon</description>
		<include>OSDInfoIconDimension</include>
		<label>à</label>
	</control>
	<control type="label">
		<description>Serien</description>
		<width>1500</width>
		<include>OSDLabelInfoDimension</include>
		<label>$INFO[Container(222).ListItem(1).TVShowTitle]$VAR[CustomEnumeration]$INFO[Container(222).ListItem(1).Season, Staffel , ]$INFO[Container(222).ListItem(1).Episode,Episode , ]$INFO[Container(222).ListItem(1).Title]</label>
		<visible>String.IsEqual(Control.GetLabel(111),Control.GetLabel(112))</visible>
		<visible>VideoPlayer.Content(episodes)</visible>
	</control>
	<control type="label">
		<description>Filme</description>
		<width>1500</width>
		<include>OSDLabelInfoDimension</include>
		<label>$INFO[Container(222).ListItem(1).Title]</label>
		<visible>String.IsEqual(Control.GetLabel(111),Control.GetLabel(112))</visible>
		<visible>!VideoPlayer.Content(episodes)</visible>
	</control>
</control>
</controls>
</window>
