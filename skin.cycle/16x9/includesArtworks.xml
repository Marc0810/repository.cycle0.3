<variable name="Art-Landscape">
	<value condition="Skin.HasSetting(EnableGenreArtworks) + Container.Content(genres) + !String.StartsWith(Container.FolderPath,videodb://tvshows/)">$INFO[ListItem.Label,resource://resource.images.moviegenrefanart.cycle/moviegenres_fanart/,.jpg]</value>
	<value condition="Skin.HasSetting(EnableGenreArtworks) + Container.Content(genres)">$INFO[ListItem.Label,resource://resource.images.moviegenrefanart.cycle/tvgenres_fanart/,.jpg]</value>
	<value condition="!String.IsEmpty(ListItem.Art(tvshow.landscape))">$INFO[ListItem.Art(tvshow.landscape)]</value>
	<value condition="!String.IsEmpty(ListItem.Art(landscape))">$INFO[ListItem.Art(landscape)]</value>
	<value>$INFO[ListItem.Art(fanart)]</value>
</variable>

<variable name="Art-Poster">
	<value condition="Skin.HasSetting(EnableGenreArtworks) + Container.Content(genres) + !String.StartsWith(Container.FolderPath,videodb://tvshows/)">$INFO[ListItem.Label,resource://resource.images.moviegenrefanart.cycle/moviegenres_poster/,.jpg]</value>
	<value condition="Skin.HasSetting(EnableGenreArtworks) + Container.Content(genres)">$INFO[ListItem.Label,resource://resource.images.moviegenrefanart.cycle/tvgenres_poster/,.jpg]</value>
	<value condition="!String.IsEmpty(ListItem.Art(poster))">$INFO[ListItem.Art(poster)]</value>
	<value condition="!String.IsEmpty(ListItem.Thumb)">$INFO[ListItem.Thumb]</value>
	<value>$INFO[ListItem.Icon]</value>
</variable>

<variable name="Art-thumb">
	<value condition="!String.IsEmpty(ListItem.Art(thumb))">$INFO[ListItem.Art(thumb)]</value>
	<value>$INFO[ListItem.Art(fanart)]</value>
</variable>

<variable name="Art-Info-Poster">
	<value condition="!String.IsEmpty(ListItem.Art(poster))">$INFO[ListItem.Art(poster)]</value>
	<value condition="!String.IsEmpty(ListItem.Art(tvshow.poster))">$INFO[ListItem.Art(tvshow.poster)]</value>
	<value>$INFO[ListItem.Icon]</value>
</variable>

<variable name="Art-logo">
	<value condition="String.Contains(ListItem.DBTYPE,Season)">$INFO[ListItem.Path,,logo.png]</value>
	<value condition="!String.IsEmpty(ListItem.Art(clearlogo)) + [String.Contains(ListItem.DBTYPE,movie) | String.Contains(ListItem.DBTYPE,tvshow)]">$INFO[ListItem.Art(clearlogo)]</value>
	<value condition="!String.IsEmpty(ListItem.Art(tvshow.clearlogo)) + String.Contains(ListItem.DBTYPE,episode)">$INFO[ListItem.Art(tvshow.clearlogo)]</value>
	<value condition="String.Contains(ListItem.DBTYPE,artist) + !String.IsEmpty(Skin.String(Music_Folder_Path))">$INFO[Skin.String(Music_Folder_Path)]$INFO[ListItem.Artist,,/logo.png]</value>
	<value condition="String.Contains(ListItem.DBTYPE,album) + !String.IsEmpty(Skin.String(Music_Folder_Path))">$INFO[Skin.String(Music_Folder_Path)]$INFO[ListItem.Property(Album_Artist),,/logo.png]</value>
</variable>

<variable name="Art-Info-Widget-Poster">
	<value condition="!String.IsEmpty(Container(400).ListItem.Art(tvshow.poster))">$INFO[Container(400).ListItem.Art(tvshow.poster)]</value>
	<value condition="!String.IsEmpty(Container(400).ListItem.Art(poster))">$INFO[Container(400).ListItem.Art(poster)]</value>
	<value>$INFO[Container(400).ListItem.Icon]</value>
</variable>

<variable name="Art-Widget-Fanart">
	<value condition="!String.IsEmpty(ListItem.TVShowTitle) + !String.IsEmpty(ListItem.Duration)">$INFO[ListItem.Art(thumb)]</value><!-- Episode -->
	<value condition="!String.IsEmpty(ListItem.Art(fanart))">$INFO[ListItem.Art(fanart)]</value><!-- rest -->
	<value>$INFO[ListItem.Icon]</value>
</variable>

<variable name="Art-Widget-logo">
	<value condition="!String.IsEmpty(Container(400).ListItem.Art(tvshow.clearlogo))">$INFO[Container(400).ListItem.Art(tvshow.clearlogo)]</value>
	<value>$INFO[Container(400).ListItem.Art(clearlogo)]</value>
</variable>

<variable name="Art-Banner">
	<value condition="Skin.HasSetting(EnableGenreArtworks) + Container.Content(genres) + !String.StartsWith(Container.FolderPath,videodb://tvshows/)">$INFO[ListItem.Label,resource://resource.images.moviegenrefanart.cycle/moviegenres_banner/,.jpg]</value>
	<value condition="Skin.HasSetting(EnableGenreArtworks) + Container.Content(genres)">$INFO[ListItem.Label,resource://resource.images.moviegenrefanart.cycle/tvgenres_banner/,.jpg]</value>
	<value condition="!String.IsEmpty(ListItem.Art(banner))">$INFO[ListItem.Art(banner)]</value>
</variable>

