					<top>30</top>
					<width>30</width>
					<height>88.5</height>
					<texture colordiffuse="$VAR[primaryCol]">White.png</texture>
					<visible>!ListItem.IsParentFolder</visible>
					<animation effect="fade" delay="400" time="200" start="50" end="100">Focus</animation>
					<animation effect="fade" time="200" start="100" end="50">UnFocus</animation>
				</control>
				<control type="image">
					<description>Hintergrund</description>
					<left>20</left>
					<top>30</top>
					<width>1500</width>
					<height>88.5</height>
					<texture colordiffuse="ListBackgroundDiffuse">White.png</texture>
					<visible>!ListItem.IsParentFolder</visible>
