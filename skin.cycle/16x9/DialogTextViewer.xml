<?xml version="1.0" encoding="UTF-8"?>
<window>
<!-- Cycle 0.3 -->
<defaultcontrol>61</defaultcontrol>
<coordinates>
	<system>1</system>
	<left>0</left>
	<top>0</top>
</coordinates>
<controls>
<control type="group">
	<left>400</left>
	<include>Dialog_popup_Animation</include>
	<visible>!Window.IsVisible(addoninformation)</visible>
	<control type="image"><!-- Hintergrund -->
		<description>Hintergrund</description>
		<left>dialogbar.left</left>
		<top>dialogbar.top</top>
		<width>1100</width>
		<height>945</height>
		<include>DialogBackground</include>
	</control>
	<control type="group"><!-- content -->
		<animation effect="fade" delay="400" start="0" end="100" time="200">WindowOpen</animation>
		<animation effect="fade" start="100" end="0" time="200">WindowClose</animation>
		<control type="label" id="1">
			<description>Titel</description>
			<left>bottom.dialogbar.left</left>
			<top>45</top>
			<width>1000</width>
			<height>60</height>
			<font>DialogHeader</font>
			<include>VintageDialogTitel_Animation</include>
		</control>
		<control type="textbox" id="5">
			<description>Text</description>
			<left>bottom.dialogbar.left</left>
			<top>110</top>
			<width>900</width>
			<height max="756">auto</height>
			<align>justify</align>
			<font>Plot</font>
			<pagecontrol>61</pagecontrol>
			<label>-</label>
		</control>
		<control type="scrollbar" id="61">
			<left>1000</left>
			<top>110</top>
			<width>6</width>
			<height>770</height>
			<onleft>close</onleft>
			<onright>close</onright>
			<ondown>61</ondown>
			<onup>61</onup>
			<showonepage>true</showonepage>
			<orientation>vertical</orientation>
		</control>
	</control>
</control>
<control type="group"><!-- textbox mit groÃŸem text -->
	<include>Open_Close_Visible_Hidden_Zoom_Animation</include>
	<visible>Window.IsVisible(addoninformation)</visible><!-- check - ohne immer sichtbar beim skinwechsel? -->
	<control type="image">
		<description>Bar</description>
		<left>-500</left>
		<top>200</top>
		<width>2920</width>
		<height>152</height>
		<texture colordiffuse="$VAR[circlesCol]">views/info/bar.png</texture>
	</control>
	<control type="label">
		<description>Titel</description>
		<left>260</left>
		<top>110</top>
		<width>1050</width>
		<height>50</height>
		<scroll>true</scroll>
		<scrollspeed>20</scrollspeed>
		<font>TitleCapsBig</font>
		<label>$INFO[Control.GetLabel(1)]</label>
		<include>VintageFont_Animation-12</include>
	</control>
	<control type="textbox" id="5">
		<description>Beschreibung</description>
		<left>260</left>
		<top>360</top>
		<width>1450</width>
		<height max="432">auto</height>
		<font>PlotZoom</font>
		<pagecontrol>61</pagecontrol>
		<label>-</label>
	</control>
	<control type="scrollbar" id="61">
		<left>1750</left>
		<top>360</top>
		<width>6</width>
		<height>432</height>
		<showonepage>true</showonepage>
		<onright>Dialog.close(1198)</onright>
		<onleft>Dialog.close(1198)</onleft>
		<onup>61</onup>
		<ondown>61</ondown>
		<visible>true</visible>
	</control>
</control>
</controls>
</window>