<?xml version="1.0" encoding="UTF-8"?>
<includes>
<!-- Hintergruende -->
<include name="global_background">
	<control type="image">
		<description>Hintergrund texture</description>
		<width>1920</width>
		<height>1080</height>
		<texture>special://skin/backgrounds/background.jpg</texture>
	</control>
	<control type="image">
		<description>Hintergrund diffuse</description>
		<width>1920</width>
		<height>1080</height>
		<texture colordiffuse="$VAR[BackdropCol]">white.png</texture>
	</control>
	<control type="image">
		<description>Wolken</description>
		<top>390</top>
		<width>3240</width>
		<height>790</height>
		<aspectratio>-</aspectratio>
		<texture colordiffuse="$VAR[BackgroundCloudsDiffuse]">special://skin/backgrounds/clouds/cloud_png1.png</texture>
		<animation type="Conditional" condition="true">
		<effect type="fade" start="80" end="100" time="0" />
		</animation>
		<visible>String.IsEmpty(Control.GetLabel(2345)) | String.IsEqual(Control.GetLabel(2345),leer) | Skin.HasSetting(HideBackGroundFanart)</visible>
		<animation effect="slide" start="100,0" end="-1400,0" time="70000" tween="sine" easing="inout" condition="!Window.IsActive(extendedprogressdialog) + !Window.IsActive(busydialog) + !Window.IsActive(DialogConfirm.xml)" pulse="true">conditional</animation>
	</control>
</include>

<variable name="value_global_fanart">
	<value condition="!String.IsEmpty(ListItem.Art(fanart))">$INFO[ListItem.Art(fanart)]</value>
	<value condition="System.HasAddon(resource.images.moviegenrefanart.cycle) + Container.Content(genres) + !String.StartsWith(Container.FolderPath,videodb://tvshows/)">$INFO[ListItem.Label,resource://resource.images.moviegenrefanart.cycle/moviegenres_fanart/,.jpg]</value>
	<value condition="System.HasAddon(resource.images.moviegenrefanart.cycle) + Container.Content(genres)">$INFO[ListItem.Label,resource://resource.images.moviegenrefanart.cycle/tvgenres_fanart/,.jpg]</value>
	<value condition="[Container.Content(albums) | Container.Content(songs)] + !String.IsEmpty(Container.Art(artist.fanart))">$INFO[Container.Art(artist.fanart)]</value>
	<value condition="Container.Content(artists) + !String.IsEmpty(ListItem.Property(Fanart_Image))">$INFO[ListItem.Property(Fanart_Image)]</value>
	<value condition="!String.IsEmpty(Container.Art(fanart))">$INFO[Container.Art(fanart)]</value>
	<value condition="Window.IsVisible(script-lazytv-main.xml)">$INFO[Container(655).ListItem.Property(Fanart_Image)]</value>
	<value condition="Window.Isvisible(videos) + Window.IsActive(Custom_1101_Widgets.xml)">$INFO[Container(400).ListItem.Art(fanart)]</value>
	<value condition="Window.IsActive(Custom_1103_Categoryinfo.xml)">$INFO[Container(400).ListItem.Art(fanart)]</value>
	<value condition="Window.IsActive(Custom_1104_Categoryinfolist.xml)">$INFO[Container(400).ListItem.Art(fanart)]</value>
</variable>

<include name="global_fanart">
	<control type="image" id="2345">
		<description>Hiddencontrol fanart leer</description>
		<texture fallback="leer">$VAR[value_global_fanart]</texture>
		<include>HiddenControl</include>
		<visible>!Skin.HasSetting(HideBackGroundFanart)</visible>
	</control>
	<control type="image">
		<description>Hintergrund fanart</description>
		<width>1920</width>
		<height>1080</height>
		<fadetime>300</fadetime>
		<texture background="true" colordiffuse="$VAR[BackgroundFanartDiffuse]">$VAR[value_global_fanart]</texture>
		<include>Visible_Hidden_Background_Fade_Animation</include>
		<visible>!Skin.HasSetting(HideBackGroundFanart)</visible>
	</control>
</include>

</includes>