<?xml version="1.0" encoding="UTF-8"?>
<window type="dialog" id="1150">
<!-- Cycle 0.3 -->
<visible>System.ScreenSaverActive</visible>
<defaultcontrol always="true">1153</defaultcontrol>
<controls>
<control type="group">
	<description>Screensaver overlay</description>
	<animation type="WindowOpen" reversible="false">
		<effect type="fade" start="0" end="100" delay="100" time="1250" tween="cubic" easing="inout" />
	</animation>
	<animation type="WindowClose" reversible="false">
		<effect type="fade" start="100" end="0" time="250" tween="cubic" easing="inout" />
	</animation>
	<include condition="Skin.HasSetting(EnableVintageOverlay)">global_vintagebackground</include>
	<include condition="!Skin.HasSetting(EnableVintageOverlay)">global_background</include>
	<control type="button" id="1153">
		<description>Hiddenfocus schließen button</description>
		<width>1920</width><!-- include ueberschreibung groeße fuer click falls focus floeten geht -->
		<height>1080</height>
		<include>HiddenControl</include>
		<onclick>Dialog.close(1150)</onclick>
		<onleft>Dialog.close(1150)</onleft>
		<onright>Dialog.close(1150)</onright>
		<oninfo>Dialog.close(1150)</oninfo>
		<onup>Dialog.close(1150)</onup>
		<ondown>Dialog.close(1150)</ondown>
	</control>
	<control type="group"><!-- Uhr -->
		<description>Uhr</description>
		<left>603</left>
		<top>183</top>
		<include>Open_Close_Visible_Hidden_Fade_Animation</include>
		<include condition="!Skin.HasSetting(EnableVintageOverlay)">CycleClock</include>
		<include condition="Skin.HasSetting(EnableVintageOverlay)">VintageClock</include>
	</control>
	<control type="group"><!-- Title -->
		<animation type="Visible" reversible="false">
			<effect type="fade" delay="1000" time="600" start="0" end="100" tween="cubic" easing="out" />
		</animation>
		<animation type="Hidden" reversible="false">
			<effect type="fade" time="100" start="100" end="0" tween="cubic" easing="out" />
		</animation>
		<control type="label">
			<description>Titel</description>
			<left>460</left>
			<top>900</top>
			<width>1000</width>
			<height>60</height>
			<align>center</align>
			<font>CycleLogoBranding</font>
			<textcolor>TextColorMedium</textcolor>
			<label>$VAR[GlobalSkinversion]</label>
			<visible>!Player.HasMedia</visible>
		</control>
		<control type="label">
			<description>Subtitel</description>
			<left>460</left>
			<top>970</top>
			<width>1000</width>
			<height>60</height>
			<align>center</align>
			<textcolor>TextColorMedium</textcolor>
			<label>...</label>
			<visible>!Window.IsVisible(progressdialog) + !Player.HasMedia</visible>
		</control>
	</control>
	<include>Clock_nowplaying</include>
	<control type="group"><!-- Info links Date/Wetter -->
		<description>Info links Date/Wetter</description>
		<top>450</top>
		<left>100</left>
		<animation type="Visible" reversible="false">
			<effect type="fade" time="700" start="0" end="100" tween="cubic" easing="out" />
		</animation>
		<animation type="Hidden" reversible="false">
			<effect type="fade" time="100" start="100" end="0" tween="cubic" easing="out" />
		</animation>
		<visible>!String.IsEmpty(Weather.Plugin) + Weather.IsFetched</visible>
		<control type="label">
			<description>Datum</description>
			<width>500</width>
			<height>70</height>
			<font>BreadcumbNormal</font>
			<label>$INFO[System.Date],</label>
		</control>
		<control type="label">
			<description>Wetter Standort</description>
			<top>40</top>
			<width>400</width>
			<height>60</height>
			<font>BreadcumbSmall</font>
			<label>$INFO[Window(Weather).Property(Current.Location)]</label>
		</control>
	</control>
	<control type="group"><!-- Info rechts Wetter temp/ausblick -->
		<description>Info rechts Wetter temp/ausblick</description>
		<top>450</top>
		<left>1320</left>
		<animation type="Visible" reversible="false">
			<effect type="fade" time="700" start="0" end="100" tween="cubic" easing="out" />
		</animation>
		<animation type="Hidden" reversible="false">
			<effect type="fade" time="100" start="100" end="0" tween="cubic" easing="out" />
		</animation>
		<visible>!String.IsEmpty(Weather.Plugin) + Weather.IsFetched</visible>
		<control type="label">
			<description>Temperatur</description>
			<align>right</align>
			<width>500</width>
			<height>70</height>
			<font>BreadcumbNormal</font>
			<label>$INFO[Window(Weather).Property(Current.Temperature)]$INFO[System.TemperatureUnits]</label>
		</control>
		<control type="label">
			<description>Ausblick</description>
			<top>40</top>
			<width>500</width>
			<height>60</height>
			<align>right</align>
			<font>BreadcumbSmall</font>
			<label>$INFO[Window(Weather).Property(Current.Condition)]</label>
		</control>
	</control>
</control>
</controls>
</window>

