<?xml version="1.0" encoding="UTF-8"?>
<window type="dialog" id="1121">
<defaultcontrol always="true">9335</defaultcontrol>
<onunload>ClearProperty(TextBox.Logo,home)</onunload>
<onunload>ClearProperty(TextBox.Title,home)</onunload>
<onunload>ClearProperty(TextBox.SubTitle,home)</onunload>
<onunload>ClearProperty(TextBox.SubTitle2,home)</onunload>
<onunload>ClearProperty(TextBox.Plot,home)</onunload>
<!-- Cycle 0.3 -->
<controls>
<control type="image">
	<description>Textbox hintergrund oben</description>
	<left>-400</left>
	<width>2320</width>
	<height>290</height>
	<texture colordiffuse="FocusBackdropCol">white.png</texture>
	<visible>!Window.IsVisible(SettingsCategory.xml)</visible>
	<animation type="WindowOpen" reversible="false">
		<effect type="fade" delay="1000" start="0" end="100" time="5000" tween="cubic" easing="in" />
	</animation>
	<animation type="WindowClose" reversible="false">
		<effect type="fade" start="100" end="0" time="150" tween="cubic" easing="inout" />
	</animation>
</control>
<control type="image">
	<description>Textbox hintergrund unten</description>
	<left>-400</left>
	<top>290</top>
	<width>2320</width>
	<height>880</height>
	<texture colordiffuse="FocusBackdropCol2">white.png</texture>
	<visible>!Window.IsVisible(SettingsCategory.xml)</visible>
	<animation type="WindowOpen" reversible="false">
		<effect type="fade" delay="1000" start="0" end="100" time="5000" tween="cubic" easing="in" />
	</animation>
	<animation type="WindowClose" reversible="false">
		<effect type="fade" start="100" end="0" time="150" tween="cubic" easing="inout" />
	</animation>
</control>
<include>global_topbar</include>
<control type="image">
	<description>Art logo</description>
	<include>TextBoxArtLogo</include>
	<texture background="true">$INFO[Window(home).Property(TextBox.Logo)]</texture>
	<include>Open_Close_Visible_Hidden_Fade_Animation</include>
	<visible>!IsEmpty(Window(home).Property(TextBox.Logo))</visible>
</control>
<control type="group"><!-- textbox mit großem text -->
	<include>Open_Close_Visible_Hidden_Zoom_Animation</include>
	<control type="image">
		<description>Bar</description>
		<left>-500</left>
		<top>200</top>
		<width>2920</width>
		<height>152</height>
		<texture colordiffuse="$VAR[CirclesCol]">views/info/bar.png</texture>
	</control>
	<control type="label">
		<description>Titel</description>
		<left>260</left>
		<top>110</top>
		<width>1050</width>
		<height>50</height>
		<scroll>true</scroll>
		<scrollspeed>20</scrollspeed>
		<font>TitleCapsBig</font>
		<label>$INFO[Window(home).Property(TextBox.Title)]</label>
		<animation type="Conditional" reversible="false"condition="String.IsEmpty(Window(home).Property(TextBox.SubTitle))">
			<effect type="slide" end="0,40" time="0" />
		</animation>
		<include>VintageFont_Animation-12</include>
	</control>
	<control type="grouplist">
		<description>SubTitel</description>
		<left>260</left>
		<top>180</top>
		<width>1050</width>
		<height>50</height>
		<orientation>horizontal</orientation>
		<control type="label" id="11981">
			<description>Subtitel bei episoden und musik</description>
			<width>auto</width>
			<height>50</height>
			<font>TitleCapsNormal</font>
			<label>$INFO[Window(home).Property(TextBox.SubTitle)]</label>
		</control>
		<control type="label">
			<description>Enum</description>
			<width>auto</width>
			<height>50</height>
			<font>EnumRegularNormal</font>
			<label>$VAR[CustomEnumeration]</label>
			<visible>!String.IsEmpty(Window(home).Property(TextBox.SubTitle2))</visible>
		</control>
		<control type="label">
			<description>Subtitel bei episoden und musik</description>
			<width>auto</width>
			<height>50</height>
			<font>TitleCapsNormal</font>
			<label>$INFO[Window(home).Property(TextBox.SubTitle2)]</label>
		</control>
	</control>
	<control type="textbox" id="9336">
		<description>Beschreibung</description>
		<left>260</left>
		<top>360</top>
		<width>1450</width>
		<height max="432">auto</height>
		<font>PlotZoom</font>
		<pagecontrol>9335</pagecontrol>
		<label fallback="Kein Überblick gefunden">$INFO[Window(home).Property(TextBox.Plot)]</label>
	</control>
	<control type="scrollbar" id="9335">
		<left>1750</left>
		<top>360</top>
		<width>6</width>
		<height>432</height>
		<showonepage>true</showonepage>
		<oninfo>Dialog.close(1121)</oninfo>
		<onright>Dialog.close(1121)</onright>
		<onleft>Dialog.close(1121)</onleft>
		<onup>9335</onup>
		<ondown>9335</ondown>
	</control>
	<control type="label">
		<description>CurrentPage</description>
		<left>1700</left>
		<top>810</top>
		<width>100</width>
		<height>50</height>
		<align>center</align>
		<font>RegularSmall</font>
		<label>$INFO[Container(9336).CurrentPage,,/]$INFO[Container(9336).NumPages]</label>
		<visible>Integer.IsGreater(Container(9336).NumPages,1)</visible>
	</control>
</control>
</controls>
</window>

